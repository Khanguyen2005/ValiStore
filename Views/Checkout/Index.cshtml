@model ValiModern.Models.ViewModels.CheckoutVM
@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-4">
    <h2 class="mb-4">Checkout</h2>

    @if (TempData["Error"] != null)
    {
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
    }

    @using (Html.BeginForm("ProcessOrder", "Checkout", FormMethod.Post, new { @class = "row" }))
    {
    @Html.AntiForgeryToken()

    <div class="col-lg-7">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="bi bi-person me-2"></i>Shipping Information</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    @Html.LabelFor(m => m.FullName, "Full Name *", new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", placeholder = "Enter your full name" })
                    @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(m => m.Phone, "Phone Number *", new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder = "0901234567" })
                        @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(m => m.Email, "Email", new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "email@example.com" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Address, "Shipping Address *", new { @class = "form-label" })
                    @Html.TextAreaFor(m => m.Address, new { @class = "form-control", rows = 3, placeholder = "Enter your full address" })
                    @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Note, "Order Notes (Optional)", new { @class = "form-label" })
                    @Html.TextAreaFor(m => m.Note, new { @class = "form-control", rows = 2, placeholder = "Any special instructions?" })
                </div>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="bi bi-credit-card me-2"></i>Payment Method</h5>
            </div>
            <div class="card-body">
                <div class="form-check mb-3 p-3 border rounded">
                    @Html.RadioButtonFor(m => m.PaymentMethod, "COD", new { @class = "form-check-input", id = "paymentCOD" })
                    <label class="form-check-label w-100" for="paymentCOD" style="cursor:pointer;">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-cash-coin fs-3 text-success me-3"></i>
                            <div>
                                <strong>Cash on Delivery (COD)</strong>
                                <div class="text-muted small">Pay when you receive the order</div>
                            </div>
                        </div>
                    </label>
                </div>

                <div class="form-check p-3 border rounded">
                    @Html.RadioButtonFor(m => m.PaymentMethod, "VNPay", new { @class = "form-check-input", id = "paymentVNPay" })
                    <label class="form-check-label w-100" for="paymentVNPay" style="cursor:pointer;">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-credit-card-2-front fs-3 text-primary me-3"></i>
                            <div>
                                <strong>VNPay</strong>
                                <div class="text-muted small">Pay online via VNPay gateway</div>
                            </div>
                        </div>
                    </label>
                </div>
                @Html.ValidationMessageFor(m => m.PaymentMethod, "", new { @class = "text-danger d-block mt-2" })
            </div>
        </div>
    </div>

    <div class="col-lg-5">
        <div class="card shadow-sm position-sticky" style="top:20px;">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Order Summary</h5>
            </div>
            <div class="card-body">
                <div class="order-items mb-3" style="max-height:300px;overflow-y:auto;">
                    @foreach (var item in Model.Items)
                    {
                    <div class="d-flex align-items-center mb-2 pb-2 border-bottom">
                        @if (!string.IsNullOrEmpty(item.ProductImageUrl))
                        {
                        <img src="@item.ProductImageUrl" alt="@item.ProductName" style="width:50px;height:50px;object-fit:cover;border-radius:6px;" class="me-2" />
                        }
                        <div class="flex-grow-1">
                            <div class="small fw-bold">@item.ProductName</div>
                            <div class="small text-muted">
                                @if (!string.IsNullOrEmpty(item.ColorName))
                                {
                                <span>@item.ColorName</span>
                                }
                                @if (!string.IsNullOrEmpty(item.SizeName))
                                {
                                <span class="ms-1">/ @item.SizeName</span>
                                }
                                <span class="ms-1">× @item.Quantity</span>
                            </div>
                        </div>
                        <div class="text-end">
                            <strong class="small">@String.Format("{0:n0}", item.Subtotal)</strong>
                        </div>
                    </div>
                    }
                </div>

                <div class="d-flex justify-content-between mb-2">
                    <span>Subtotal:</span>
                    <span>@String.Format("{0:n0}", Model.TotalAmount) VND</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span>Shipping:</span>
                    <span class="text-success">Free</span>
                </div>
                <hr />
                <div class="d-flex justify-content-between mb-3">
                    <strong class="fs-5">Total:</strong>
                    <strong class="text-primary fs-5">@String.Format("{0:n0}", Model.TotalAmount) VND</strong>
                </div>

                <button type="submit" class="btn btn-primary w-100 btn-lg">
                    <i class="bi bi-check-circle me-2"></i>Place Order
                </button>
                <a href="@Url.Action("Index", "Cart")" class="btn btn-outline-secondary w-100 mt-2">
                    <i class="bi bi-arrow-left me-1"></i>Back to Cart
                </a>
            </div>
        </div>
    </div>
    }
</div>

@section scripts {
    <script>
        $(document).ready(function() {
        // Pre-select COD by default
        if (!$('input[name="PaymentMethod"]:checked').length) {
        $('#paymentCOD').prop('checked', true);
        }
        });
    </script>
}

<style>
    .form-check-input:checked + .form-check-label {
    background-color: #f0f8ff;
    border-color: #0d6efd !important;
    }

    .order-items::-webkit-scrollbar {
    width: 6px;
    }

    .order-items::-webkit-scrollbar-thumb {
    background: #ccc;
    border-radius: 3px;
    }
</style>
