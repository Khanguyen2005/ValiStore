@model ValiModern.Models.ViewModels.UserOrdersVM
@{
    ViewBag.Title = "My Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="~/Content/OrderIndex.css" rel="stylesheet" />
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="h4 mb-0"><i class="bi bi-bag-check me-2"></i>My Orders</h2>
    </div>

    <!-- Status Filter Tabs -->
    <ul class="nav nav-pills mb-4" role="tablist">
        <li class="nav-item">
            <a class="nav-link @(Model.CurrentStatus == "All" ? "active" : "")" 
               href="@Url.Action("Index", new { status = "All" })">
                All <span class="badge bg-secondary ms-1">@ViewBag.AllCount</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(Model.CurrentStatus == "Pending" ? "active" : "")" 
               href="@Url.Action("Index", new { status = "Pending" })">
                <i class="bi bi-clock"></i> Pending <span class="badge bg-warning text-dark ms-1">@ViewBag.PendingCount</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(Model.CurrentStatus == "Confirmed" ? "active" : "")" 
               href="@Url.Action("Index", new { status = "Confirmed" })">
                <i class="bi bi-check-circle"></i> Confirmed <span class="badge bg-info ms-1">@ViewBag.ConfirmedCount</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(Model.CurrentStatus == "Shipped" ? "active" : "")" 
               href="@Url.Action("Index", new { status = "Shipped" })">
                <i class="bi bi-truck"></i> Shipped <span class="badge bg-primary ms-1">@ViewBag.ShippedCount</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(Model.CurrentStatus == "Completed" ? "active" : "")" 
               href="@Url.Action("Index", new { status = "Completed" })">
                <i class="bi bi-check-all"></i> Completed <span class="badge bg-success ms-1">@ViewBag.CompletedCount</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(Model.CurrentStatus == "Cancelled" ? "active" : "")" 
               href="@Url.Action("Index", new { status = "Cancelled" })">
                <i class="bi bi-x-circle"></i> Cancelled <span class="badge bg-danger ms-1">@ViewBag.CancelledCount</span>
            </a>
        </li>
    </ul>

    @if (Model.Orders.Any())
    {
        <!-- Orders List -->
        <div class="row g-3">
            @foreach (var order in Model.Orders)
            {
                <div class="col-12">
                    <div class="card order-card shadow-sm">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <!-- Order Info -->
                                <div class="col-md-3">
                                    <div class="mb-2">
                                        <strong class="text-primary">@order.OrderCode</strong>
                                    </div>
                                    <small class="text-muted">
                                        <i class="bi bi-calendar3 me-1"></i>
                                        @order.OrderDate.ToString("dd MMM yyyy")
                                    </small>
                                </div>

                                <!-- Status -->
                                <div class="col-md-2 text-center">
                                    @switch (order.Status)
                                    {
                                        case "Pending":
                                            <span class="badge bg-warning text-dark px-3 py-2">
                                                <i class="bi bi-clock me-1"></i>Pending
                                            </span>
                                            break;
                                        case "Confirmed":
                                            <span class="badge bg-info px-3 py-2">
                                                <i class="bi bi-check-circle me-1"></i>Confirmed
                                            </span>
                                            break;
                                        case "Shipped":
                                            <span class="badge bg-primary px-3 py-2">
                                                <i class="bi bi-truck me-1"></i>Shipped
                                            </span>
                                            break;
                                        case "Completed":
                                            <span class="badge bg-success px-3 py-2">
                                                <i class="bi bi-check-all me-1"></i>Completed
                                            </span>
                                            break;
                                        case "Cancelled":
                                            <span class="badge bg-danger px-3 py-2">
                                                <i class="bi bi-x-circle me-1"></i>Cancelled
                                            </span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary px-3 py-2">@order.Status</span>
                                            break;
                                    }
                                </div>

                                <!-- Items & Payment -->
                                <div class="col-md-3">
                                    <div class="mb-1">
                                        <i class="bi bi-box me-1"></i>
                                        <strong>@order.ItemCount</strong> item(s)
                                    </div>
                                    <small class="text-muted">
                                        <i class="bi bi-credit-card me-1"></i>@order.PaymentMethod
                                    </small>
                                </div>

                                <!-- Total Amount -->
                                <div class="col-md-2 text-center">
                                    <div class="fw-bold text-success fs-5">
                                        @order.TotalAmount.ToString("N0") ₫
                                    </div>
                                </div>

                                <!-- Actions -->
                                <div class="col-md-2 text-end">
                                    <a href="@Url.Action("Details", new { id = order.OrderId })" 
                                       class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-eye me-1"></i>Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        if (Model.TotalPages > 1)
        {
            <nav aria-label="Order pagination" class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { status = Model.CurrentStatus, page = Model.CurrentPage - 1 })">
                            <i class="bi bi-chevron-left"></i>
                        </a>
                    </li>

                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { status = Model.CurrentStatus, page = i })">@i</a>
                        </li>
                    }

                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { status = Model.CurrentStatus, page = Model.CurrentPage + 1 })">
                            <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        }
    }
    else
    {
        <!-- No Orders -->
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="bi bi-inbox display-1 text-muted"></i>
            </div>
            <h4 class="text-muted mb-3">No Orders Found</h4>
            <p class="text-muted mb-4">
                @if (Model.CurrentStatus != "All")
                {
                    <text>You don't have any @Model.CurrentStatus.ToLower() orders yet.</text>
                }
                else
                {
                    <text>You haven't placed any orders yet. Start shopping now!</text>
                }
            </p>
            <a href="@Url.Action("Index", "Product")" class="btn btn-primary">
                <i class="bi bi-shop me-2"></i>Start Shopping
            </a>
        </div>
    }
</div>
