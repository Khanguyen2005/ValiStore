@model ValiModern.Models.ViewModels.HomeIndexVM
@{
    ViewBag.Title = "Home";
    var banners = Model.Banners;
    var blocks = Model.Blocks;
}

<div class="container py-3">
    <!-- Banners carousel -->
    <div id="homeCarousel" class="carousel slide mb-4" data-bs-ride="carousel">
        <div class="carousel-inner rounded-3 shadow-sm home-banner-wrapper">
            @if (banners != null && banners.Any())
            {
                var index = 0;
                foreach (var b in banners)
                {
                    <div class="carousel-item @(index==0?"active":null)">
                        <div class="home-banner-frame">
                            <img class="home-banner-img" src="@b.image_url" alt="@b.name" />
                        </div>
                    </div>
                    index++;
                }
            }
            else
            {
                <div class="carousel-item active">
                    <div class="bg-light d-flex align-items-center justify-content-center" style="height:280px;">No banners</div>
                </div>
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#homeCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#homeCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    @helper ProductGridRow(string title, string link, IEnumerable<ValiModern.Models.ViewModels.ProductCardVM> items)
    {
        <section class="mb-4">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <h2 class="h5 fw-bold mb-0">@title</h2>
                <a href="@link" class="btn btn-sm btn-outline-primary">See all</a>
            </div>
            <div class="row g-3">
                @if (items != null && items.Any())
                {
                    foreach (var p in items)
                    {
                        <div class="col-6 col-md-3">
                            <div class="card h-100 shadow-sm">
                                <img class="card-img-top" src="@p.image_url" alt="@p.name" />
                                <div class="card-body p-3">
                                    <h6 class="card-title text-truncate" title="@p.name">@p.name</h6>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="fw-semibold text-primary">@String.Format("{0:n0}", p.price) ₫</span>
                                        <a href="@Url.Action("Details","Product", new { id = p.id })" class="btn btn-sm btn-outline-secondary"><i class="bi bi-plus-lg"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12"><div class="text-muted small">No products</div></div>
                }
            </div>
        </section>
    }

    @if (blocks != null)
    {
        foreach (var block in blocks)
        {
            @ProductGridRow(block.CategoryName, Url.Action("Index", "Product", new { category = block.CategoryName }), block.Products)
        }
    }

    <!-- Guide section -->
    <section class="mt-5">
        <h2 class="h5 fw-bold mb-3">Hướng dẫn sử dụng & chọn sản phẩm</h2>
        <div class="row g-3">
            <div class="col-md-4">
                <img class="w-100 rounded-3 shadow-sm" src="https://images.unsplash.com/photo-1516762689617-e1cffcef479d?q=80&w=1200&auto=format&fit=crop" alt="Guide1" />
                <small class="text-muted d-block mt-2">Chọn kích thước vali phù hợp chuyến đi</small>
            </div>
            <div class="col-md-4">
                <img class="w-100 rounded-3 shadow-sm" src="https://images.unsplash.com/photo-1512548438457-4c9584d3766c?q=80&w=1200&auto=format&fit=crop" alt="Guide2" />
                <small class="text-muted d-block mt-2">Bí quyết sắp xếp đồ thông minh</small>
            </div>
            <div class="col-md-4">
                <img class="w-100 rounded-3 shadow-sm" src="https://images.unsplash.com/photo-1491553895911-0055eca6402d?q=80&w=1200&auto=format&fit=crop" alt="Guide3" />
                <small class="text-muted d-block mt-2">Chăm sóc và vệ sinh balo, túi xách</small>
            </div>
        </div>
    </section>
</div>

<style>
    .home-banner-wrapper { background:#fff; }
    .home-banner-frame { width:100%; display:flex; align-items:center; justify-content:center; background:#fff; }
    .home-banner-img { width:100%; height:auto; display:block; /* ensure full image shows without cropping */ }
    @@media (min-width:992px){ .home-banner-img { max-height:520px; } }
    .card-img-top{background:#f8f9fa; height:160px; object-fit:cover; }
</style>