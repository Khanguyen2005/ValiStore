@model ValiModern.Models.ViewModels.HomeIndexVM
@{
    ViewBag.Title = "Home";
    var banners = Model.Banners;
    var blocks = Model.Blocks;
}

@section Styles {
    <link href="~/Content/Home.css" rel="stylesheet" />
}

<div class="container py-4">
    <!-- Banners carousel -->
    <div class="row justify-content-center mb-5">
        <div class="col-12">
            <div id="homeCarousel" class="carousel slide custom-carousel" data-bs-ride="carousel">
                <div class="carousel-indicators custom-indicators">
                    @if (banners != null && banners.Any())
                    {
                        for (int i = 0; i < banners.Count(); i++)
                        {
                            <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="@i"
                                    class="@(i==0?"active":"")" aria-current="@(i==0?"true":"false")"
                                    aria-label="Slide @(i+1)"></button>
                        }
                    }
                </div>

                <div class="carousel-inner home-banner-wrapper">
                    @if (banners != null && banners.Any())
                    {
                        var index = 0;
                        foreach (var b in banners)
                        {
                            <div class="carousel-item @(index==0?"active":"")">
                                <div class="home-banner-frame">
                                    <img class="home-banner-img" src="@b.image_url" alt="@b.name"
                                         onerror="this.onerror=null; this.src='https://images.unsplash.com/photo-1553062407-98eeb64c6a62?q=80&w=1200&auto=format&fit=crop';" />
                                </div>
                            </div>
                            index++;
                        }
                    }
                    else
                    {
                        <div class="carousel-item active">
                            <div class="home-banner-frame d-flex align-items-center justify-content-center bg-light">
                                <div class="text-center">
                                    <i class="bi bi-image text-muted fs-1 mb-3"></i>
                                    <p class="text-muted fs-5">No banners available</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <button class="carousel-control-prev custom-control" type="button" data-bs-target="#homeCarousel" data-bs-slide="prev">
                    <span class="control-icon">
                        <i class="bi bi-chevron-left"></i>
                    </span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next custom-control" type="button" data-bs-target="#homeCarousel" data-bs-slide="next">
                    <span class="control-icon">
                        <i class="bi bi-chevron-right"></i>
                    </span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </div>

    @helper ProductGridRow(string title, string link, IEnumerable<ValiModern.Models.ViewModels.ProductCardVM> items)
    {
        <section class="mb-5 category-section">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="h4 fw-bold mb-0 position-relative section-title">
                    @title
                    <span class="position-absolute bottom-0 start-0 w-50 border-bottom border-3 border-primary"></span>
                </h2>
                <a href="@link" class="btn btn-outline-primary btn-sm d-flex align-items-center gap-2 view-all-btn">
                    <span>View All</span>
                    <i class="bi bi-arrow-right"></i>
                </a>
            </div>
            <div class="row g-3 g-md-4">
                @if (items != null && items.Any())
                {
                    foreach (var p in items)
                    {
                        <div class="col-6 col-md-3">
                            <div class="card home-product-card h-100 border-0 shadow-sm">
                                @if (p.HasDiscount)
                                {
                                    <div class="discount-badge">
                                        <span>-@p.DiscountPercent%</span>
                                    </div>
                                }
                                <div class="product-image-wrapper">
                                    <a href="@Url.Action("Details", "Product", new { id = p.id })">
                                        <img src="@p.image_url" class="product-image" alt="@p.name"
                                             onerror="this.onerror=null; this.src='https://images.unsplash.com/photo-1553062407-98eeb64c6a62?q=80&w=600&auto=format&fit=crop';" />
                                    </a>
                                    <div class="product-quick-view">
                                        <a href="@Url.Action("Details", "Product", new { id = p.id })" class="btn btn-light btn-sm rounded-circle" title="Quick View">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </div>
                                </div>
                                <div class="card-body p-3 d-flex flex-column">
                                    <h6 class="product-title mb-2" title="@p.name">@p.name</h6>
                                    @if (!string.IsNullOrEmpty(p.brand_name) || !string.IsNullOrEmpty(p.category_name))
                                    {
                                        <p class="product-meta text-muted small mb-2">
                                            @if (!string.IsNullOrEmpty(p.brand_name))
                                            {
                                                <span><i class="bi bi-tag me-1"></i>@p.brand_name</span>
                                            }
                                            @if (!string.IsNullOrEmpty(p.category_name))
                                            {
                                                <span class="ms-2"><i class="bi bi-folder me-1"></i>@p.category_name</span>
                                            }
                                        </p>
                                    }
                                    <div class="mt-auto">
                                        <div class="product-price mb-2">
                                            @if (p.HasDiscount)
                                            {
                                                <span class="original-price">@String.Format("{0:n0}", p.original_price) ₫</span>
                                            }
                                            <span class="current-price">@String.Format("{0:n0}", p.price) ₫</span>
                                        </div>
                                        @if (p.sold > 0)
                                        {
                                            <small class="text-muted d-block mb-2">
                                                <i class="bi bi-bag-check me-1"></i>Sold: @p.sold
                                            </small>
                                        }
                                        <a href="@Url.Action("Details", "Product", new { id = p.id })" class="btn btn-primary btn-sm w-100">
                                            <i class="bi bi-cart-plus me-1"></i>Add to Cart
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12">
                        <div class="alert alert-info text-center">
                            <i class="bi bi-info-circle me-2"></i>No products available yet
                        </div>
                    </div>
                }
            </div>
        </section>
    }

    @if (blocks != null)
    {
        foreach (var block in blocks)
        {
            @ProductGridRow(block.CategoryName, Url.Action("Index", "Product", new { category = block.CategoryName }), block.Products)
        }
    }

    <!-- Guide section -->
    <section class="mt-5 pt-4 border-top guide-section">
        <div class="text-center mb-4">
            <h2 class="h3 fw-bold mb-2">Shopping Guide</h2>
            <p class="text-muted">Discover tips to choose and use products effectively</p>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="guide-card position-relative overflow-hidden rounded-4 shadow-sm">
                    <img class="w-100 guide-img" src="https://images.unsplash.com/photo-1516762689617-e1cffcef479d?q=80&w=800&auto=format&fit=crop" alt="Guide1"
                         onerror="this.onerror=null; this.src='https://images.unsplash.com/photo-1553062407-98eeb64c6a62?q=80&w=800&auto=format&fit=crop';" />
                    <div class="guide-overlay position-absolute bottom-0 start-0 w-100 p-3 text-white">
                        <h5 class="fw-bold mb-1">Choose the Right Size</h5>
                        <small>Perfect for every type of trip</small>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="guide-card position-relative overflow-hidden rounded-4 shadow-sm">
                    <img class="w-100 guide-img" src="https://images.unsplash.com/photo-1512548438457-4c9584d3766c?q=80&w=800&auto=format&fit=crop" alt="Guide2"
                         onerror="this.onerror=null; this.src='https://images.unsplash.com/photo-1553062407-98eeb64c6a62?q=80&w=800&auto=format&fit=crop';" />
                    <div class="guide-overlay position-absolute bottom-0 start-0 w-100 p-3 text-white">
                        <h5 class="fw-bold mb-1">Smart Packing</h5>
                        <small>Optimize space and convenience</small>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="guide-card position-relative overflow-hidden rounded-4 shadow-sm">
                    <img class="w-100 guide-img" src="https://images.unsplash.com/photo-1491553895911-0055eca6402d?q=80&w=800&auto=format&fit=crop" alt="Guide3"
                         onerror="this.onerror=null; this.src='https://images.unsplash.com/photo-1553062407-98eeb64c6a62?q=80&w=800&auto=format&fit=crop';" />
                    <div class="guide-overlay position-absolute bottom-0 start-0 w-100 p-3 text-white">
                        <h5 class="fw-bold mb-1">Product Care</h5>
                        <small>Maintain and clean properly</small>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>