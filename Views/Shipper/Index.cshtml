@model ValiModern.Models.ViewModels.ShipperDeliveryListVM
@{
    ViewBag.Title = "My Deliveries";
    Layout = "~/Views/Shared/_ShipperLayout.cshtml";
}

<!-- Statistics Cards -->
@if(Model.Stats != null)
{
    <div class="row g-3 mb-4">
        <div class="col-md-3 col-sm-6">
            <div class="shipper-card bg-warning bg-opacity-10 border-warning">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <small class="text-muted d-block">Pending</small>
                        <h3 class="mb-0 fw-bold text-warning">@Model.Stats.TotalPending</h3>
                    </div>
                    <div class="fs-1 text-warning opacity-50">
                        <i class="bi bi-box-seam"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="shipper-card bg-success bg-opacity-10 border-success">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <small class="text-muted d-block">Delivered Today</small>
                        <h3 class="mb-0 fw-bold text-success">@Model.Stats.TotalDeliveredToday</h3>
                    </div>
                    <div class="fs-1 text-success opacity-50">
                        <i class="bi bi-calendar-check"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="shipper-card bg-info bg-opacity-10 border-info">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <small class="text-muted d-block">This Month</small>
                        <h3 class="mb-0 fw-bold text-info">@Model.Stats.TotalDeliveredThisMonth</h3>
                    </div>
                    <div class="fs-1 text-info opacity-50">
                        <i class="bi bi-graph-up"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="shipper-card bg-primary bg-opacity-10 border-primary">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <small class="text-muted d-block">All Time</small>
                        <h3 class="mb-0 fw-bold text-primary">@Model.Stats.TotalCompletedAllTime</h3>
                    </div>
                    <div class="fs-1 text-primary opacity-50">
                        <i class="bi bi-trophy"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="row mb-4">
    <div class="col-12">
        <h2 class="h4 fw-bold mb-3">
            <i class="bi bi-truck me-2 text-success"></i>My Delivery Orders
        </h2>

        <div class="d-flex flex-wrap gap-2 align-items-center mb-3">
            <!-- Filter Buttons -->
            <div class="btn-group" role="group">
                <a href="@Url.Action("Index", new { filter = "" })" 
                   class="btn @(string.IsNullOrEmpty(ViewBag.Filter) ? "btn-success" : "btn-outline-success")">
                    <i class="bi bi-grid-3x3-gap me-1"></i>All (@Model.TotalCount)
                </a>
                <a href="@Url.Action("Index", new { filter = "assigned" })" 
                   class="btn @(ViewBag.Filter == "assigned" ? "btn-success" : "btn-outline-success")">
                    <i class="bi bi-box-seam me-1"></i>Pending (@Model.AssignedCount)
                </a>
            </div>

            <!-- Search Box -->
            <div class="ms-auto">
                <form method="get" action="@Url.Action("Index")" class="d-flex gap-2">
                    <input type="hidden" name="filter" value="@ViewBag.Filter" />
                    <input type="text" name="search" class="form-control" 
                           placeholder="Search by name, phone, address..." 
                           value="@ViewBag.SearchTerm"
                           style="min-width: 250px;" />
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search"></i>
                    </button>
                    @if(!string.IsNullOrEmpty(ViewBag.SearchTerm as string))
                    {
                        <a href="@Url.Action("Index", new { filter = ViewBag.Filter })" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i>
                        </a>
                    }
                </form>
            </div>
        </div>
    </div>
</div>

@if (!Model.Orders.Any())
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle me-2"></i>
        @if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string))
        {
            <text>No orders found matching your search.</text>
        }
        else if (ViewBag.Filter == "assigned")
        {
            <text>No pending deliveries at the moment.</text>
        }
        else
        {
            <text>No orders assigned to you yet.</text>
        }
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var order in Model.Orders)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm border-0 @(order.DeliveredAt == null ? "border-start border-5 border-warning" : "")">
                    <div class="card-header bg-white border-0 pb-0">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6 class="mb-1 fw-bold">Order #@order.OrderId</h6>
                                <small class="text-muted">
                                    <i class="bi bi-calendar me-1"></i>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")
                                </small>
                            </div>
                            @if (order.DeliveredAt == null)
                            {
                                <span class="badge bg-warning text-dark">Pending</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Delivered</span>
                            }
                        </div>
                    </div>
                    
                    <div class="card-body">
                        <div class="mb-2">
                            <small class="text-muted d-block">
                                <i class="bi bi-person me-1"></i><strong>Customer:</strong>
                            </small>
                            <div class="ms-3">@order.CustomerName</div>
                        </div>

                        <div class="mb-2">
                            <small class="text-muted d-block">
                                <i class="bi bi-telephone me-1"></i><strong>Phone:</strong>
                            </small>
                            <div class="ms-3">
                                <a href="tel:@order.Phone" class="text-decoration-none">@order.Phone</a>
                            </div>
                        </div>

                        <div class="mb-2">
                            <small class="text-muted d-block">
                                <i class="bi bi-geo-alt me-1"></i><strong>Address:</strong>
                            </small>
                            <div class="ms-3 small">@order.ShippingAddress</div>
                        </div>

                        <div class="mb-2">
                            <small class="text-muted d-block">
                                <i class="bi bi-box me-1"></i><strong>Items:</strong>
                            </small>
                            <div class="ms-3">@order.TotalQuantity unit(s) / @order.ProductCount product(s)</div>
                        </div>

                        <div class="mb-3">
                            <small class="text-muted d-block">
                                <i class="bi bi-cash me-1"></i><strong>Total:</strong>
                            </small>
                            <div class="ms-3 fw-bold text-success">@order.TotalAmount.ToString("N0") d</div>
                        </div>

                        @if (order.DeliveredAt != null)
                        {
                            <div class="alert alert-success py-2 mb-2">
                                <small>
                                    <i class="bi bi-check-circle me-1"></i>
                                    Delivered: @order.DeliveredAt.Value.ToString("dd/MM/yyyy HH:mm")
                                </small>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning py-2 mb-2">
                                <small>
                                    <i class="bi bi-clock me-1"></i>
                                    Assigned: @order.AssignedAt.ToString("dd/MM/yyyy HH:mm")
                                </small>
                            </div>
                        }
                    </div>

                    <div class="card-footer bg-white border-0">
                        <a href="@Url.Action("Details", new { id = order.OrderId })" class="btn btn-sm btn-success w-100">
                            <i class="bi bi-eye me-1"></i>View Details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
