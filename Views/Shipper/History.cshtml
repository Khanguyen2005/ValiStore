@model ValiModern.Models.ViewModels.ShipperHistoryVM
@{
    ViewBag.Title = "Delivery History";
    Layout = "~/Views/Shared/_ShipperLayout.cshtml";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="mb-1"><i class="bi bi-clock-history me-2"></i>Delivery History</h2>
                <p class="text-muted mb-0">All completed deliveries: <strong>@Model.TotalCount</strong> orders</p>
            </div>
            <a href="@Url.Action("Index")" class="btn btn-outline-primary">
                <i class="bi bi-arrow-left me-1"></i>Back to Dashboard
            </a>
        </div>
    </div>
</div>

@if (Model.Orders.Any())
{
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Order</th>
                                    <th>Customer</th>
                                    <th>Items</th>
                                    <th>Amount</th>
                                    <th>Delivered Date</th>
                                    <th>Duration</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.Orders)
                                {
                                    var deliveryDuration = order.DeliveredAt.HasValue 
                                        ? (order.DeliveredAt.Value - order.AssignedAt).TotalHours 
                                        : 0;
                                    
                                    <tr>
                                        <td>
                                            <div>
                                                <strong class="text-primary">@order.OrderCode</strong>
                                                <br />
                                                <small class="text-muted">
                                                    <i class="bi bi-calendar me-1"></i>@order.OrderDate.ToString("dd/MM/yyyy")
                                                </small>
                                            </div>
                                        </td>
                                        <td>
                                            <div>
                                                <strong>@order.CustomerName</strong>
                                                <br />
                                                <small class="text-muted">
                                                    <i class="bi bi-telephone me-1"></i>@order.Phone
                                                </small>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-info">@order.ItemCount items</span>
                                        </td>
                                        <td>
                                            <strong class="text-success">@order.TotalAmount.ToString("N0") đ</strong>
                                        </td>
                                        <td>
                                            <div>
                                                <i class="bi bi-check-circle text-success me-1"></i>
                                                @(order.DeliveredAt.HasValue ? order.DeliveredAt.Value.ToString("dd/MM/yyyy HH:mm") : "Chưa giao")
                                            </div>
                                        </td>
                                        <td>
                                            @if (deliveryDuration < 24)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="bi bi-lightning-fill me-1"></i>@deliveryDuration.ToString("F1")h
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">
                                                    @((int)(deliveryDuration / 24))d @((int)(deliveryDuration % 24))h
                                                </span>
                                            }
                                        </td>
                                        <td class="text-end">
                                            <a href="@Url.Action("Details", new { id = order.OrderId })" 
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye me-1"></i>View
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @* Pagination *@
    if (Model.TotalPages > 1)
    {
        <div class="row mt-4">
            <div class="col-12">
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                            <a class="page-link" href="@Url.Action("History", new { page = Model.CurrentPage - 1 })">
                                <i class="bi bi-chevron-left"></i>
                            </a>
                        </li>

                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" href="@Url.Action("History", new { page = i })">@i</a>
                            </li>
                        }

                        <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                            <a class="page-link" href="@Url.Action("History", new { page = Model.CurrentPage + 1 })">
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
                <p class="text-center text-muted">
                    Showing page @Model.CurrentPage of @Model.TotalPages (@Model.TotalCount total deliveries)
                </p>
            </div>
        </div>
    }
}
else
{
    <div class="row">
        <div class="col-12">
            <div class="alert alert-info text-center py-5">
                <i class="bi bi-info-circle fs-1 d-block mb-3"></i>
                <h4>No Delivery History Yet</h4>
                <p class="mb-0">You haven't completed any deliveries yet. Complete your first delivery to see it here!</p>
            </div>
        </div>
    </div>
}
