@model List<ValiModern.Models.ViewModels.CategoryVM>
@{
    ViewBag.Title = "Categories";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold mb-3">Shop by Category</h1>
        <p class="text-muted">Browse our collection by product categories</p>
    </div>

    <div class="row g-4">
        @foreach (var category in Model)
        {
    <div class="col-md-4 col-sm-6">
    <a href="@Url.Action("Products", "Category", new { id = category.Id })" class="text-decoration-none">
     <div class="card category-card h-100 border-0 shadow-sm">
               <div class="card-body text-center p-5">
  <div class="category-icon mb-4">
             <i class="bi bi-tag fs-1 text-primary"></i>
           </div>
       <h3 class="card-title h4 mb-3">@category.Name</h3>
        <p class="text-muted mb-0">Explore @category.Name</p>
        </div>
   <div class="card-footer bg-transparent border-0 text-center pb-4">
           <span class="btn btn-outline-primary btn-sm">View Products <i class="bi bi-arrow-right"></i></span>
       </div>
 </div>
   </a>
            </div>
        }
    </div>
</div>

@section Styles {
    <link href="~/Content/Category.css" rel="stylesheet" />
}
