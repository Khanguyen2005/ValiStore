@model ValiModern.Models.ViewModels.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        .change-password-page {
            padding: 2rem 0;
        }

        .password-card {
            border-radius: var(--radius-lg, 14px);
            box-shadow: var(--shadow-md, 0 4px 12px rgba(0, 0, 0, 0.08));
            border: 1px solid var(--gray-200, #e9ecef);
        }

        .password-card .card-header {
            background: var(--primary-gradient, linear-gradient(135deg, #0d6efd 0%, #3a8dff 100%));
            color: white;
            padding: 1.5rem;
            border-radius: var(--radius-lg, 14px) var(--radius-lg, 14px) 0 0;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .password-card .card-header i {
            font-size: 2rem;
        }

        .password-card .card-header h4 {
            margin: 0;
            font-weight: 600;
        }

        /* Form Styles */
        .change-password-page .form-label {
            font-weight: 600;
            color: var(--text-primary, #212529);
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .change-password-page .form-label i {
            width: 20px;
            color: var(--primary, #0d6efd);
            text-align: center;
        }

        .change-password-page .form-control {
            border: 2px solid var(--gray-300, #dee2e6);
            border-radius: var(--radius-md, 10px);
            padding: 0.75rem 1rem;
            transition: all var(--transition-fast, 0.15s);
        }

        .change-password-page .form-control:focus {
            border-color: var(--primary, #0d6efd);
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.15);
        }

        /* Password Toggle */
        .password-toggle {
            position: relative;
        }

        .password-toggle .toggle-btn {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: var(--gray-500, #6c757d);
            cursor: pointer;
            padding: 0.5rem;
            font-size: 1.1rem;
            transition: color var(--transition-fast, 0.15s);
        }

        .password-toggle .toggle-btn:hover {
            color: var(--primary, #0d6efd);
        }

        /* Button Styles */
        .change-password-page .btn-primary {
            background: var(--primary-gradient, linear-gradient(135deg, #0d6efd 0%, #3a8dff 100%));
            border: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            transition: all var(--transition-base, 0.3s ease);
        }

        .change-password-page .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-primary, 0 6px 18px rgba(13, 110, 253, 0.25));
        }

        .change-password-page .btn-primary i {
            font-size: 1rem;
        }

        .change-password-page .btn-outline-secondary {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            border: 2px solid var(--secondary, #6c757d);
        }

        .change-password-page .btn-outline-secondary i {
            font-size: 1rem;
        }

        /* Security Tips */
        .security-tips {
            background: var(--primary-light, #e7f1ff);
            border-left: 4px solid var(--primary, #0d6efd);
            padding: 1rem;
            border-radius: var(--radius-md, 10px);
        }

        .security-tips h6 {
            color: var(--primary, #0d6efd);
            margin-bottom: 0.75rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .security-tips h6 i {
            font-size: 1.2rem;
        }

        .security-tips ul {
            margin: 0;
            padding-left: 1.5rem;
        }

        .security-tips li {
            margin-bottom: 0.35rem;
            color: var(--text-secondary, #6c757d);
        }

        @@media (max-width: 767.98px) {
            .password-card .card-header {
                padding: 1.25rem;
            }
        }
    </style>
}

<div class="container change-password-page">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card password-card">
                <div class="card-header">
                    <i class="bi bi-shield-lock"></i>
                    <h4>Change Password</h4>
                </div>
                <div class="card-body p-4">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show">
                            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show">
                            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "needs-validation" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-lock"></i>
                                Current Password *
                            </label>
                            <div class="password-toggle">
                                @Html.PasswordFor(m => m.CurrentPassword, new { @class = "form-control", placeholder = "Enter current password", id = "currentPassword" })
                                <button type="button" class="toggle-btn" onclick="togglePassword('currentPassword')">
                                    <i class="bi bi-eye" id="currentPassword-icon"></i>
                                </button>
                            </div>
                            @Html.ValidationMessageFor(m => m.CurrentPassword, "", new { @class = "text-danger small" })
                        </div>

                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-lock-fill"></i>
                                New Password *
                            </label>
                            <div class="password-toggle">
                                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = "Enter new password", id = "newPassword" })
                                <button type="button" class="toggle-btn" onclick="togglePassword('newPassword')">
                                    <i class="bi bi-eye" id="newPassword-icon"></i>
                                </button>
                            </div>
                            @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger small" })
                        </div>

                        <div class="mb-4">
                            <label class="form-label">
                                <i class="bi bi-check-circle"></i>
                                Confirm New Password *
                            </label>
                            <div class="password-toggle">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm new password", id = "confirmPassword" })
                                <button type="button" class="toggle-btn" onclick="togglePassword('confirmPassword')">
                                    <i class="bi bi-eye" id="confirmPassword-icon"></i>
                                </button>
                            </div>
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger small" })
                        </div>

                        <div class="security-tips mb-4">
                            <h6>
                                <i class="bi bi-info-circle"></i>
                                Password Security Tips
                            </h6>
                            <ul>
                                <li>Use at least 6 characters</li>
                                <li>Include numbers and special characters</li>
                                <li>Avoid using common words or personal information</li>
                                <li>Don't reuse passwords from other accounts</li>
                            </ul>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle"></i>
                                Update Password
                            </button>
                            <a href="@Url.Action("Index", "Account")" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i>
                                Back to Profile
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        function togglePassword(fieldId) {
            const field = document.getElementById(fieldId);
            const icon = document.getElementById(fieldId + '-icon');
            
            if (field.type === 'password') {
                field.type = 'text';
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
            } else {
                field.type = 'password';
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
            }
        }
    </script>
}
