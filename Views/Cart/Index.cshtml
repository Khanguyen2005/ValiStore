@model ValiModern.Models.ViewModels.CartVM
@{
    ViewBag.Title = "Shopping Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="~/Content/Cart.css" rel="stylesheet" />
}

<div class="container cart-page py-4">
    <h2 class="mb-4 fw-bold">Shopping Cart</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Items == null || !Model.Items.Any())
    {
        <div class="empty-cart text-center p-5 bg-light rounded-3 shadow-sm">
            <i class="bi bi-cart-x display-4 text-muted"></i>
            <h5 class="mt-3">Your cart is empty</h5>
            <p class="text-muted">Looks like you haven't added anything yet.</p>
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary"><i class="bi bi-bag me-1"></i> Continue shopping</a>
        </div>
    }
    else
    {
        <div class="row g-4">
            <div class="col-lg-8">
                <div class="card cart-list border-0 shadow-sm">
                    <div class="card-body p-0">
                        @foreach (var item in Model.Items)
                        {
                            <div class="cart-item d-flex align-items-center">
                                <div class="cart-thumb me-3">
                                    @if (!string.IsNullOrEmpty(item.ProductImageUrl))
                                    {
                                        <img src="@item.ProductImageUrl" alt="@item.ProductName" class="cart-thumb-img" />
                                    }
                                    else
                                    {
                                        <div class="cart-thumb-placeholder"><i class="bi bi-image text-muted"></i></div>
                                    }
                                </div>

                                <div class="cart-info flex-grow-1">
                                    <h6 class="cart-title mb-1" title="@item.ProductName">@item.ProductName</h6>
                                    <div class="cart-attrs text-muted small">
                                        @if (!string.IsNullOrEmpty(item.ColorName))
                                        {
                                            <span>Color: <span class="color-dot" style="background:@item.ColorCode"></span> @item.ColorName</span>
                                        }
                                        @if (!string.IsNullOrEmpty(item.SizeName))
                                        {
                                            <span class="ms-3">Size: @item.SizeName</span>
                                        }
                                    </div>
                                    <div class="unit-price mt-2 fw-semibold text-primary">@String.Format("{0:n0}", item.Price) VND</div>
                                </div>

                                <div class="cart-qty me-3">
                                    @using (Html.BeginForm("UpdateQuantity", "Cart", FormMethod.Post, new { @class = "qty-form d-inline-flex align-items-center" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.Hidden("productId", item.ProductId)
                                        @Html.Hidden("colorId", item.ColorId)
                                        @Html.Hidden("sizeId", item.SizeId)
                                        <button type="button" class="qty-btn minus" aria-label="Decrease"><i class="bi bi-dash"></i></button>
                                        <input type="number" name="quantity" value="@item.Quantity" min="1" max="99" class="qty-input text-center" />
                                        <button type="button" class="qty-btn plus" aria-label="Increase"><i class="bi bi-plus"></i></button>
                                    }
                                </div>

                                <div class="cart-subtotal me-3 text-end">
                                    <div class="fw-bold">@String.Format("{0:n0}", item.Subtotal) VND</div>
                                </div>

                                <div class="cart-remove pe-2">
                                    @using (Html.BeginForm("RemoveFromCart", "Cart", FormMethod.Post, new { @class = "d-inline" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.Hidden("productId", item.ProductId)
                                        @Html.Hidden("colorId", item.ColorId)
                                        @Html.Hidden("sizeId", item.SizeId)
                                        <button type="submit" class="btn btn-icon btn-outline-danger" title="Remove" onclick="return confirm('Remove this item?')">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>

                @using (Html.BeginForm("ClearCart", "Cart", FormMethod.Post, new { @class = "mt-3" }))
                {
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-outline-secondary" onclick="return confirm('Clear entire cart?')">
                        <i class="bi bi-trash me-1"></i> Clear Cart
                    </button>
                }
            </div>

            <div class="col-lg-4">
                <div class="card summary-card border-0 shadow-sm sticky-top" style="top: 20px;">
                    <div class="card-header bg-gradient-primary text-white">
                        <h5 class="mb-0"><i class="bi bi-receipt me-2"></i>Order Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Items:</span>
                            <span>@Model.TotalItems</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span>Subtotal:</span>
                            <span>@String.Format("{0:n0}", Model.TotalAmount) VND</span>
                        </div>
                        <hr />
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <strong>Total:</strong>
                            <strong class="text-primary fs-5">@String.Format("{0:n0}", Model.TotalAmount) VND</strong>
                        </div>

                        <a href="@Url.Action("Index", "Checkout")" class="btn btn-primary w-100 mb-2">
                            <i class="bi bi-credit-card me-1"></i> Proceed to Checkout
                        </a>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary w-100">
                            <i class="bi bi-arrow-left me-1"></i> Continue Shopping
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section scripts {
<script>
    (function(){
        document.querySelectorAll('.qty-form').forEach(function(form){
            const input = form.querySelector('.qty-input');
            const minus = form.querySelector('.qty-btn.minus');
            const plus = form.querySelector('.qty-btn.plus');
            const min = parseInt(input.getAttribute('min')||'1');
            const max = parseInt(input.getAttribute('max')||'99');
            minus.addEventListener('click', function(){
                let v = parseInt(input.value||'1');
                if(v>min){ input.value = v-1; form.submit(); }
            });
            plus.addEventListener('click', function(){
                let v = parseInt(input.value||'1');
                if(v<max){ input.value = v+1; form.submit(); }
            });
        });
    })();
</script>
}
