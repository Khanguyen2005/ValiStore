@model ValiModern.Models.ViewModels.CartVM
@{
    ViewBag.Title = "Shopping Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-4">
    <h2 class="mb-4">Shopping Cart</h2>

    @if (TempData["Success"] != null)
    {
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
    }

    @if (Model.Items == null || !Model.Items.Any())
    {
    <div class="alert alert-info">
        <i class="bi bi-cart-x me-2"></i>
        Your cart is empty.
        <a href="@Url.Action("Index", "Home")" class="alert-link">Continue shopping</a>
    </div>
    }
    else
    {
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    @foreach (var item in Model.Items)
                    {
                    <div class="cart-item d-flex align-items-center py-3 border-bottom">
                        <div class="cart-item-image me-3">
                            @if (!string.IsNullOrEmpty(item.ProductImageUrl))
                            {
                            <img src="@item.ProductImageUrl" alt="@item.ProductName" style="width:80px;height:80px;object-fit:cover;border-radius:8px;" />
                            }
                            else
                            {
                            <div style="width:80px;height:80px;background:#f0f0f0;border-radius:8px;display:flex;align-items:center;justify-content:center;">
                                <i class="bi bi-image text-muted"></i>
                            </div>
                            }
                        </div>

                        <div class="cart-item-info flex-grow-1">
                            <h5 class="mb-1">@item.ProductName</h5>
                            @if (!string.IsNullOrEmpty(item.ColorName))
                            {
                            <small class="text-muted">
                                Color: <span style="display:inline-block;width:16px;height:16px;background-color:@item.ColorCode;border:1px solid #ddd;border-radius:50%;vertical-align:middle;"></span>
                                @item.ColorName
                            </small>
                            }
                            @if (!string.IsNullOrEmpty(item.SizeName))
                            {
                            <small class="text-muted ms-2">Size: @item.SizeName</small>
                            }
                            <div class="mt-2">
                                <strong class="text-primary">@String.Format("{0:n0}", item.Price) VND</strong>
                            </div>
                        </div>

                        <div class="cart-item-quantity me-3">
                            @using (Html.BeginForm("UpdateQuantity", "Cart", FormMethod.Post, new { @class = "d-flex align-items-center" }))
                            {
                            @Html.AntiForgeryToken()
                            @Html.Hidden("productId", item.ProductId)
                            @Html.Hidden("colorId", item.ColorId)
                            @Html.Hidden("sizeId", item.SizeId)
                            <input type="number" name="quantity" value="@item.Quantity" min="1" max="99" class="form-control form-control-sm text-center" style="width:70px;" onchange="this.form.submit()" />
                            }
                        </div>

                        <div class="cart-item-subtotal me-3">
                            <strong>@String.Format("{0:n0}", item.Subtotal) VND</strong>
                        </div>

                        <div class="cart-item-remove">
                            @using (Html.BeginForm("RemoveFromCart", "Cart", FormMethod.Post))
                            {
                            @Html.AntiForgeryToken()
                            @Html.Hidden("productId", item.ProductId)
                            @Html.Hidden("colorId", item.ColorId)
                            @Html.Hidden("sizeId", item.SizeId)
                            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Remove this item?')">
                                <i class="bi bi-trash"></i>
                            </button>
                            }
                        </div>
                    </div>
                    }
                </div>
            </div>

            @using (Html.BeginForm("ClearCart", "Cart", FormMethod.Post, new { @class = "mt-3" }))
            {
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-outline-secondary" onclick="return confirm('Clear entire cart?')">
                <i class="bi bi-trash me-1"></i> Clear Cart
            </button>
            }
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Order Summary</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Items:</span>
                        <span>@Model.TotalItems</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <span>Subtotal:</span>
                        <span>@String.Format("{0:n0}", Model.TotalAmount) VND</span>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between mb-3">
                        <strong>Total:</strong>
                        <strong class="text-primary">@String.Format("{0:n0}", Model.TotalAmount) VND</strong>
                    </div>

                    <a href="@Url.Action("Index", "Checkout")" class="btn btn-primary w-100 mb-2">
                        <i class="bi bi-credit-card me-1"></i> Proceed to Checkout
                    </a>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary w-100">
                        <i class="bi bi-arrow-left me-1"></i> Continue Shopping
                    </a>
                </div>
            </div>
        </div>
    </div>
    }
</div>

<style>
    .cart-item {
    transition: background-color 0.2s;
    }

    .cart-item:hover {
    background-color: #f8f9fa;
    }

    .cart-item:last-child {
    border-bottom: none !important;
    }
</style>
