@model ValiModern.Models.ViewModels.ProductDetailVM
@{
    ViewBag.Title = Model.Product.name;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var product = Model.Product;
    var images = product.Product_Images.OrderBy(i => i.sort_order).ToList();
    var mainImage = images.FirstOrDefault(i => i.is_main) ?? images.FirstOrDefault();
    var discountPercent = (product.original_price > product.price && product.original_price > 0)
        ? (int)System.Math.Round((product.original_price - product.price) / product.original_price * 100M, 0)
        : 0;
}

@section Styles {
    <link href="~/Content/ProductDetails.css" rel="stylesheet" />
}

<div class="container py-4 product-detail-page">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Product")">Shop</a></li>
            @if (product.Category != null)
            {
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Product", new { category = product.Category.name })">@product.Category.name</a></li>
            }
            <li class="breadcrumb-item active" aria-current="page">@product.name</li>
        </ol>
    </nav>

    <div class="row g-4">
        <!-- Gallery -->
        <div class="col-lg-6">
            <div class="product-gallery card border-0 shadow-sm h-100">
                <div class="p-3 pb-2">
                    <div class="main-image-wrapper rounded position-relative overflow-hidden bg-light">
                        @if (mainImage != null)
                        {
                            <img src="@mainImage.image_url" alt="@product.name" id="mainImage" class="main-image img-fluid" onerror="this.onerror=null;this.src='/Content/images/placeholder.png';" />
                        }
                        @if (discountPercent > 0)
                        {
                            <div class="gallery-discount-badge">-@discountPercent%</div>
                        }
                    </div>
                </div>
                @if (images.Count > 1)
                {
                    <div class="thumb-strip d-flex gap-2 px-3 pb-3 flex-wrap">
                        @foreach (var img in images)
                        {
                            <button type="button" class="thumb-btn @(img == mainImage ? "active" : "")" onclick="changeMainImage('@img.image_url', this)">
                                <img src="@img.image_url" alt="thumb" class="thumb-img" onerror="this.onerror=null;this.src='/Content/images/placeholder.png';" />
                            </button>
                        }
                    </div>
                }
            </div>
        </div>

        <!-- Info -->
        <div class="col-lg-6">
            <div class="product-info card border-0 shadow-sm h-100">
                <div class="card-body p-4 d-flex flex-column">
                    <h1 class="product-title h3 fw-bold mb-3">@product.name</h1>
                    <div class="price-row mb-3">
                        @if (discountPercent > 0)
                        {
                            <span class="old-price">@String.Format("{0:n0}", product.original_price) ₫</span>
                            <span class="current-price">@String.Format("{0:n0}", product.price) ₫</span>
                            <span class="badge discount-pill ms-2">-@discountPercent%</span>
                        }
                        else
                        {
                            <span class="current-price">@String.Format("{0:n0}", product.price) ₫</span>
                        }
                    </div>
                    <div class="meta-row d-flex flex-wrap align-items-center gap-3 mb-3 small text-muted">
                        <span class="rating-stars" title="Rating 4.5/5">
                            <i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i><i class="bi bi-star-half"></i>
                            <span class="ms-1 fw-semibold">4.5</span>
                        </span>
                        <span><i class="bi bi-bag-check me-1"></i>Sold: <strong>@product.sold</strong></span>
                        @if (discountPercent > 0)
                        {<span class="text-danger fw-semibold"><i class="bi bi-percent me-1"></i>@discountPercent% OFF</span>}
                        @if (product.Brand != null)
                        {<span class="badge bg-secondary-subtle text-dark fw-normal"><i class="bi bi-tag me-1"></i>@product.Brand.name</span>}
                        @if (product.Category != null)
                        {<span class="badge bg-info-subtle text-dark fw-normal"><i class="bi bi-grid me-1"></i>@product.Category.name</span>}
                    </div>
                    <div class="description mb-4">
                        <h6 class="fw-bold mb-2">Description</h6>
                        <p class="text-muted mb-0">@(string.IsNullOrEmpty(product.description) ? "No description available." : product.description)</p>
                    </div>

                    @using (Html.BeginForm("AddToCart", "Cart", FormMethod.Post, new { @class = "add-to-cart-form mt-auto" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("productId", product.id)

                        <!-- Color selector -->
                        if (product.Colors != null && product.Colors.Any())
                        {
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Color <span class="text-danger">*</span></label>
                                <div class="color-options d-flex flex-wrap gap-2">
                                    @foreach (var color in product.Colors)
                                    {
                                        <input type="radio" name="colorId" value="@color.id" class="btn-check" id="color_@color.id" autocomplete="off" />
                                        <label class="color-chip" for="color_@color.id" title="@color.name">
                                            <span class="chip-swatch" style="background:@color.color_code"></span>
                                            <span class="chip-name">@color.name</span>
                                        </label>
                                    }
                                </div>
                                <div class="invalid-feedback d-none" id="colorError">Please select a color</div>
                            </div>
                        }

                        <!-- Size selector -->
                        if (product.Sizes != null && product.Sizes.Any())
                        {
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Size <span class="text-danger">*</span></label>
                                <div class="size-options d-flex flex-wrap gap-2">
                                    @foreach (var size in product.Sizes)
                                    {
                                        <input type="radio" name="sizeId" value="@size.id" class="btn-check" id="size_@size.id" autocomplete="off" />
                                        <label class="size-chip" for="size_@size.id">@size.name</label>
                                    }
                                </div>
                                <div class="invalid-feedback d-none" id="sizeError">Please select a size</div>
                            </div>
                        }

                        <!-- Quantity -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold">Quantity</label>
                            <div class="qty-group">
                                <button type="button" class="qty-btn" onclick="decreaseQty()"><i class="bi bi-dash"></i></button>
                                <input type="number" name="quantity" id="quantity" value="1" min="1" max="@product.stock" class="qty-input" />
                                <button type="button" class="qty-btn" onclick="increaseQty()"><i class="bi bi-plus"></i></button>
                            </div>
                            <small class="text-muted d-block mt-1">Available: <strong>@product.stock</strong> in stock</small>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg shadow-sm" @(product.stock <= 0 ? "disabled" : "")>
                                <i class="bi bi-cart-plus me-2"></i>@(product.stock > 0 ? "Add to Cart" : "Out of Stock")
                            </button>
                            <a href="@Url.Action("Index", "Product")" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Back to Shop
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Related Products -->
    @if (Model.RelatedProducts != null && Model.RelatedProducts.Any())
    {
        <section class="mt-5 related-section">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h3 class="h5 fw-bold mb-0">Related Products</h3>
                <a class="small text-decoration-none fw-semibold" href="@Url.Action("Index", "Product", new { category = product.Category?.name })">View all<i class="bi bi-arrow-right ms-1"></i></a>
            </div>
            <div class="row g-3">
                @foreach (var related in Model.RelatedProducts)
                {
                    <div class="col-6 col-md-3">
                        <div class="card related-card h-100 border-0 shadow-sm">
                            @if (related.HasDiscount)
                            {<div class="related-discount">-@related.DiscountPercent%</div>}
                            <a href="@Url.Action("Details", new { id = related.id })" class="ratio ratio-1x1 bg-light d-block overflow-hidden">
                                <img src="@related.image_url" alt="@related.name" class="related-img" onerror="this.onerror=null;this.src='/Content/images/placeholder.png';" />
                            </a>
                            <div class="card-body p-2 d-flex flex-column">
                                <h6 class="related-title mb-1" title="@related.name">@related.name</h6>
                                <div class="related-price mt-auto">
                                    @if (related.HasDiscount)
                                    {<span class="old">@String.Format("{0:n0}", related.original_price) ₫</span>}
                                    <span class="new">@String.Format("{0:n0}", related.price) ₫</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>
    }
</div>

@section scripts {
    <script>
        function changeMainImage(url, btn) {
            const main = document.getElementById('mainImage');
            if (main) { main.src = url; }
            document.querySelectorAll('.thumb-btn').forEach(b => b.classList.remove('active'));
            if (btn) btn.classList.add('active');
        }
        function increaseQty() {
            var el = document.getElementById('quantity');
            var max = parseInt(el.max); var v = parseInt(el.value); if (v < max) el.value = v + 1;
        }
        function decreaseQty() {
            var el = document.getElementById('quantity');
            var min = parseInt(el.min); var v = parseInt(el.value); if (v > min) el.value = v - 1;
        }
        // Validation highlight
        $(function () {
            $('input[name="colorId"]').on('change', function(){ $('#colorError').addClass('d-none'); });
            $('input[name="sizeId"]').on('change', function(){ $('#sizeError').addClass('d-none'); });
            $('.add-to-cart-form').on('submit', function(e){
                let ok = true;
                if ($('input[name="colorId"]').length && !$('input[name="colorId"]:checked').length) { $('#colorError').removeClass('d-none'); ok = false; }
                if ($('input[name="sizeId"]').length && !$('input[name="sizeId"]:checked').length) { $('#sizeError').removeClass('d-none'); ok = false; }
                if (!ok) { e.preventDefault(); $('html,body').animate({ scrollTop: $('.invalid-feedback:not(.d-none)').first().offset().top - 120 }, 300); }
            });
        });
    </script>
}
