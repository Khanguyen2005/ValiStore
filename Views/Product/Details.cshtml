@model ValiModern.Models.ViewModels.ProductDetailVM
@{
    ViewBag.Title = Model.Product.name;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var product = Model.Product;
    var images = product.Product_Images.OrderBy(i => i.sort_order).ToList();
    var mainImage = images.FirstOrDefault(i => i.is_main) ?? images.FirstOrDefault();
    var discountPercent = (product.original_price > product.price && product.original_price > 0)
        ? (int)System.Math.Round((product.original_price - product.price) / (decimal)product.original_price * 100M, 0)
        : 0;
}

@section Styles {
    <link href="~/Content/ProductDetails.css" rel="stylesheet" />
    <style>
        /* Force override divider via CSS variable (Bootstrap 5) */
        .product-detail-page ol.breadcrumb { --bs-breadcrumb-divider: '›'; }
        /* Fallback in case variable not applied */
        .product-detail-page .breadcrumb-item + .breadcrumb-item::before { content:'›' !important; }
    </style>
}

<div class="container py-4 product-detail-page">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb" style="--bs-breadcrumb-divider:'›';">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Product")">Shop</a></li>
            @if (product.Category != null)
            {
                <li class="breadcrumb-item"><a href="@Url.Action("Products", "Category", new { id = product.category_id })">@product.Category.name</a></li>
            }
            <li class="breadcrumb-item active" aria-current="page">@product.name</li>
        </ol>
    </nav>

    <div class="row g-4">
        <!-- Product Gallery -->
        <div class="col-lg-6">
            <div class="product-gallery card border-0 shadow-sm h-100">
                <div class="card-body p-3">
                    <div class="main-image-wrapper rounded position-relative overflow-hidden bg-light">
                        @if (mainImage != null)
                        {
                            <img src="@mainImage.image_url" alt="@product.name" id="mainImage" class="main-image img-fluid" onerror="this.onerror=null;this.src='/Content/images/placeholder.png';" />
                        }
                        @if (discountPercent > 0)
                        {
                            <div class="gallery-discount-badge">-@discountPercent%</div>
                        }
                    </div>
                    @if (images.Count > 1)
                    {
                        <div class="thumb-strip d-flex gap-2 mt-3 flex-wrap">
                            @foreach (var img in images)
                            {
                                <button type="button" class="thumb-btn @(img == mainImage ? "active" : "")" onclick="changeMainImage('@img.image_url', this)">
                                    <img src="@img.image_url" alt="Product thumbnail" class="thumb-img" onerror="this.onerror=null;this.src='/Content/images/placeholder.png';" />
                                </button>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Product Information -->
        <div class="col-lg-6">
            <div class="product-info card border-0 shadow-sm h-100">
                <div class="card-body p-4 d-flex flex-column">
                    <!-- Product Title -->
                    <h1 class="product-title h3 fw-bold mb-3">@product.name</h1>

                    <!-- Price -->
                    <div class="price-row mb-3">
                        <span class="current-price">@String.Format("{0:n0}", product.price) ₫</span>
                        @if (discountPercent > 0)
                        {
                            <span class="old-price">@String.Format("{0:n0}", product.original_price) ₫</span>
                            <span class="badge bg-danger">-@discountPercent%</span>
                        }
                    </div>

                    <!-- Product Meta Info -->
                    <div class="product-meta mb-3 pb-3 border-bottom">
                        <div class="row g-2">
                            <div class="col-6">
                                <small class="text-muted text-uppercase d-block">Stock</small>
                                <strong class="@(product.stock > 0 ? "text-success" : "text-danger")">
                                    @product.stock @(product.stock > 0 ? "in stock" : "out of stock")
                                </strong>
                            </div>
                            <div class="col-6">
                                <small class="text-muted text-uppercase d-block">Sold</small>
                                <strong>@product.sold</strong>
                            </div>
                            @if (product.Brand != null)
                            {
                                <div class="col-6">
                                    <small class="text-muted text-uppercase d-block">Brand</small>
                                    <strong>@product.Brand.name</strong>
                                </div>
                            }
                            @if (product.Category != null)
                            {
                                <div class="col-6">
                                    <small class="text-muted text-uppercase d-block">Category</small>
                                    <strong>@product.Category.name</strong>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Description -->
                    @if (!string.IsNullOrWhiteSpace(product.description))
                    {
                        <div class="description mb-4">
                            <h6 class="fw-bold mb-2">Description</h6>
                            <p class="text-muted small">@product.description</p>
                        </div>
                    }

                    @using (Html.BeginForm("AddToCart", "Cart", FormMethod.Post, new { @class = "add-to-cart-form mt-auto" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("productId", product.id)

                        <!-- Color Selector -->
                        if (product.Colors != null && product.Colors.Any())
                        {
                            <div class="mb-3">
                                <label class="form-label fw-semibold">
                                    <i class="bi bi-palette me-1"></i>Color <span class="text-danger">*</span>
                                </label>
                                <div class="color-options d-flex flex-wrap gap-2">
                                    @foreach (var color in product.Colors)
                                    {
                                        <input type="radio" name="colorId" value="@color.id" class="btn-check" id="color_@color.id" autocomplete="off" />
                                        <label class="color-chip" for="color_@color.id" title="@color.name">
                                            <span class="chip-swatch" style="background:@color.color_code"></span>
                                            <span class="chip-name">@color.name</span>
                                        </label>
                                    }
                                </div>
                                <div class="invalid-feedback d-none" id="colorError">Please select a color</div>
                            </div>
                        }

                        <!-- Size Selector -->
                        if (product.Sizes != null && product.Sizes.Any())
                        {
                            <div class="mb-3">
                                <label class="form-label fw-semibold">
                                    <i class="bi bi-rulers me-1"></i>Size <span class="text-danger">*</span>
                                </label>
                                <div class="size-options d-flex flex-wrap gap-2">
                                    @foreach (var size in product.Sizes)
                                    {
                                        <input type="radio" name="sizeId" value="@size.id" class="btn-check" id="size_@size.id" autocomplete="off" />
                                        <label class="size-chip" for="size_@size.id">@size.name</label>
                                    }
                                </div>
                                <div class="invalid-feedback d-none" id="sizeError">Please select a size</div>
                            </div>
                        }

                        <!-- Quantity -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold">
                                <i class="bi bi-plus-slash-minus me-1"></i>Quantity
                            </label>
                            <div class="qty-group">
                                <button type="button" class="qty-btn" onclick="decreaseQty()">
                                    <i class="bi bi-dash"></i>
                                </button>
                                <input type="number" name="quantity" id="quantity" value="1" min="1" max="@product.stock" class="qty-input" />
                                <button type="button" class="qty-btn" onclick="increaseQty()">
                                    <i class="bi bi-plus"></i>
                                </button>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex flex-column gap-2">
                            <button type="submit" class="btn btn-primary btn-lg d-flex align-items-center justify-content-center" @(product.stock <= 0 ? "disabled" : "")>
                                <i class="bi bi-cart-plus me-2"></i>
                                @(product.stock > 0 ? "Add to Cart" : "Out of Stock")
                            </button>
                            <a href="@Url.Action("Index", "Product")" class="btn btn-outline-secondary d-flex align-items-center justify-content-center">
                                <i class="bi bi-chevron-left me-2"></i>
                                Continue Shopping
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Related Products -->
    @if (Model.RelatedProducts != null && Model.RelatedProducts.Any())
    {
        <section class="mt-5 related-section">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="h4 fw-bold mb-0">
                    <i class="bi bi-grid-3x3-gap me-2"></i>Related Products
                </h3>
                @if (product.Category != null)
                {
                    <a class="btn btn-sm btn-outline-primary" href="@Url.Action("Index", "Product", new { category = product.Category.name })">
                        View All
                        <i class="bi bi-arrow-right ms-1"></i>
                    </a>
                }
            </div>
            <div class="row g-3">
                @foreach (var related in Model.RelatedProducts)
                {
                    <div class="col-6 col-md-3">
                        <div class="card related-card h-100 border-0 shadow-sm">
                            @if (related.HasDiscount)
                            {
                                <div class="related-discount">-@related.DiscountPercent%</div>
                            }
                            <a href="@Url.Action("Details", new { id = related.id })" class="ratio ratio-1x1 bg-light d-block overflow-hidden text-decoration-none">
                                <img src="@related.image_url" alt="@related.name" class="related-img" onerror="this.onerror=null;this.src='/Content/images/placeholder.png';" />
                            </a>
                            <div class="card-body p-3 d-flex flex-column">
                                <h6 class="related-title mb-2" title="@related.name">@related.name</h6>
                                <div class="related-price mt-auto">
                                    @if (related.HasDiscount)
                                    {
                                        <span class="old">@String.Format("{0:n0}", related.original_price) ₫</span>
                                    }
                                    <span class="new">@String.Format("{0:n0}", related.price) ₫</span>
                                </div>
                                <small class="text-muted mt-1">
                                    <i class="bi bi-bag-check me-1"></i>Sold: @related.sold
                                </small>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>
    }
</div>

@section scripts {
    <script>
        function changeMainImage(url, btn) {
            const mainImg = document.getElementById('mainImage');
            if (mainImg) {
                mainImg.src = url;
            }
            document.querySelectorAll('.thumb-btn').forEach(b => b.classList.remove('active'));
            if (btn) {
                btn.classList.add('active');
            }
        }

        function increaseQty() {
            var qtyInput = document.getElementById('quantity');
            var maxQty = parseInt(qtyInput.max);
            var currentQty = parseInt(qtyInput.value);
            if (currentQty < maxQty) {
                qtyInput.value = currentQty + 1;
            }
        }

        function decreaseQty() {
            var qtyInput = document.getElementById('quantity');
            var minQty = parseInt(qtyInput.min);
            var currentQty = parseInt(qtyInput.value);
            if (currentQty > minQty) {
                qtyInput.value = currentQty - 1;
            }
        }

        // Form validation
        $(function () {
            $('input[name="colorId"]').on('change', function () {
                $('#colorError').addClass('d-none');
            });

            $('input[name="sizeId"]').on('change', function () {
                $('#sizeError').addClass('d-none');
            });

            $('.add-to-cart-form').on('submit', function (e) {
                let isValid = true;

                if ($('input[name="colorId"]').length && !$('input[name="colorId"]:checked').length) {
                    $('#colorError').removeClass('d-none');
                    isValid = false;
                }

                if ($('input[name="sizeId"]').length && !$('input[name="sizeId"]:checked').length) {
                    $('#sizeError').removeClass('d-none');
                    isValid = false;
                }

                if (!isValid) {
                    e.preventDefault();
                    $('html, body').animate({
                        scrollTop: $('.invalid-feedback:not(.d-none)').first().offset().top - 120
                    }, 300);
                }
            });
        });
    </script>
}
