@using System.Security.Claims
@using ValiModern.Models.ViewModels
@using ValiModern.Models.EF
@using ValiModern.Helpers
@{
    Layout = null;

    // Check authentication state
    bool isAuthenticated = (User != null && User.Identity != null && User.Identity.IsAuthenticated);
    
    // Initialize variables
    bool isAdmin = false;
    bool isShipper = false;
    string displayName = null;

    // Get cart count from session (always allowed, even for guests)
    int cartCount = 0;
    try
    {
        var cart = Session["ShoppingCart"] as List<CartItem>;
        if (cart != null)
        {
            cartCount = cart.Count;  // Count unique products, not total quantity
        }
    }
    catch { }

    // Process user data ONLY if authenticated
    if (isAuthenticated)
    {
        // Set admin role
        isAdmin = User.IsInRole("admin");
        
        try
        {
            // Get display name from session
            if (Session != null && Session["DisplayName"] != null)
            {
                displayName = Session["DisplayName"].ToString();
            }
            
            // Get role from session
            if (Session != null && Session["UserRole"] != null)
            {
                var userRole = Session["UserRole"].ToString();
                isShipper = userRole == "shipper";
            }
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine("[DEBUG] Error getting session data: " + ex.Message);
        }

        // Fallback: If session doesn't have displayName, rebuild from database
        if (string.IsNullOrWhiteSpace(displayName) && User.Identity != null)
        {
            // User.Identity.Name now contains user ID
            int userId;
            if (int.TryParse(User.Identity.Name, out userId))
            {
                try
                {
                    using (var db = new ValiModernDBEntities())
                    {
                        // OPTIMIZE: Use AsNoTracking and select only needed fields
                        var user = db.Users
                            .AsNoTracking()
                            .Where(u => u.id == userId)
                            .Select(u => new { u.id, u.username, u.email, u.is_admin, u.role })
                            .FirstOrDefault();
                            
                        if (user != null)
                        {
                            displayName = string.IsNullOrWhiteSpace(user.username)
                                ? (string.IsNullOrWhiteSpace(user.email) ? "User #" + user.id : user.email)
                                : user.username;
                            
                            // Store back to session
                            Session["DisplayName"] = displayName;
                            Session["UserId"] = user.id;
                            
                            // Update role
                            if (user.is_admin)
                            {
                                Session["UserRole"] = "admin";
                                isAdmin = true;
                            }
                            else if (!string.IsNullOrEmpty(user.role) && user.role == "shipper")
                            {
                                Session["UserRole"] = "shipper";
                                isShipper = true;
                            }
                        }
                    }
                }
                catch { }
            }
        }
    }

    // Get categories for menu - USE CACHE to avoid DB query on every request
    List<Category> categories = new List<Category>();
    try
    {
        categories = CacheHelper.GetOrSet(
            CacheHelper.KEY_LAYOUT_CATEGORIES,
            () => {
                using (var db = new ValiModernDBEntities())
                {
                    // OPTIMIZE: AsNoTracking for read-only data
                    return db.Categories.AsNoTracking().OrderBy(c => c.name).ToList();
                }
            },
            10 // Cache for 10 minutes (increased from 5)
        );
        if (categories == null)
        {
            categories = new List<Category>();
        }
    }
    catch { }

    // OPTIMIZE: Cache delivered orders count instead of querying every request
    int deliveredAwaitingConfirm = 0;
    if (isAuthenticated)
    {
        try
        {
            int userId;
            if (int.TryParse(User.Identity.Name, out userId))
            {
                // Cache key specific to user
                string cacheKey = "DeliveredOrders_User_" + userId;
                
                // Use GetOrSetValue for value types (int)
                deliveredAwaitingConfirm = CacheHelper.GetOrSetValue(
                    cacheKey,
                    () => {
                        using (var db = new ValiModernDBEntities())
                        {
                            // OPTIMIZE: AsNoTracking for count query
                            return db.Orders
                                .AsNoTracking()
                                .Count(o => o.user_id == userId && 
                                           o.status == "Shipped" && 
                                           o.delivered_at != null);
                        }
                    },
                    1 // Cache for 1 minute only (so it updates reasonably fast)
                );
            }
        }
        catch { }
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ValiModern</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

    <!-- Design System & Layout CSS -->
    <link href="~/Content/customer-design-system.css" rel="stylesheet" />
    <link href="~/Content/Layout.css" rel="stylesheet" />

    @RenderSection("Styles", required: false)
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
        <div class="container">
            @Html.ActionLink("ValiModern", "Index", "Home", new { area = "" }, new { @class = "navbar-brand me-4" })

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 gap-1 gap-lg-2 align-items-lg-center">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link px-3" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Shop", "Index", "Product", null, new { @class = "nav-link px-3" })
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle px-3" href="#" id="categoriesDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-grid me-1"></i>Categories
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="categoriesDropdown">
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Index", "Category")">
                                    <i class="bi bi-list-ul"></i>All Categories
                                </a>
                            </li>
                            @if (categories.Any())
                            {
                                <li><hr class="dropdown-divider"></li>
                                foreach (var category in categories)
                                {
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Products", "Category", new { id = category.id })">
                                            <i class="bi bi-tag"></i>@category.name
                                        </a>
                                    </li>
                                }
                            }
                        </ul>
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link px-3" })
                    </li>
                </ul>

                <ul class="navbar-nav ms-auto align-items-center gap-3">
                    <li class="nav-item d-flex align-items-center">
                        <a href="@Url.Action("Index", "Cart")" class="position-relative cart-icon-wrapper" title="Shopping Cart">
                            <i class="bi bi-cart3"></i>
                            @if (cartCount > 0)
                            {
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger cart-badge-pulse">
                                    @cartCount
                                </span>
                            }
                        </a>
                    </li>

                    @* Notification icon for delivered orders awaiting confirmation *@
                    @if (isAuthenticated && deliveredAwaitingConfirm > 0)
                    {
                        <li class="nav-item d-flex align-items-center">
                            <a href="@Url.Action("Index", "Order", new { status = "Shipped" })" class="notif-icon-wrapper text-decoration-none" title="Delivered orders awaiting your confirmation">
                                <i class="bi bi-bell-fill"></i>
                                <span class="notif-badge">@deliveredAwaitingConfirm</span>
                            </a>
                        </li>
                    }
                    @if (!isAuthenticated)
                    {
                        <li class="nav-item">
                            <button type="button" class="btn btn-outline-light btn-sm rounded-pill px-4 fw-bold" data-bs-toggle="modal" data-bs-target="#loginModal">
                                <i class="bi bi-box-arrow-in-right me-1"></i>Login
                            </button>
                        </li>
                        <li class="nav-item">
                            <button type="button" class="btn btn-light btn-sm rounded-pill px-4 fw-bold text-primary" data-bs-toggle="modal" data-bs-target="#registerModal">
                                <i class="bi bi-person-plus me-1"></i>Register
                            </button>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link p-0 d-flex align-items-center user-menu-trigger" href="#" id="accountMenu" role="button" data-bs-toggle="dropdown">
                                <div class="user-avatar shadow-sm">
                                    @(!string.IsNullOrEmpty(displayName) ? displayName.Substring(0,1).ToUpper() : "U")
                                </div>
                                <span class="d-none d-lg-block ms-2 me-3 fw-semibold">@displayName</span>
                                <i class="bi bi-chevron-down small opacity-75 me-2"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end user-dropdown shadow-lg" aria-labelledby="accountMenu">
                                <li class="px-3 py-2 border-bottom">
                                    <div class="d-flex align-items-center">
                                        <div class="user-avatar-large me-3">
                                            @(!string.IsNullOrEmpty(displayName) ? displayName.Substring(0,1).ToUpper() : "U")
                                        </div>
                                        <div>
                                            <div class="fw-semibold">@displayName</div>
                                            <small class="text-muted">
                                                @if (isAdmin)
                                                {
                                                    <text>Administrator</text>
                                                }
                                                else if (isShipper)
                                                {
                                                    <text>Shipper</text>
                                                }
                                                else
                                                {
                                                    <text>Member</text>
                                                }
                                            </small>
                                        </div>
                                    </div>
                                </li>
                                <li><a href="@Url.Action("Index", "Account")" class="dropdown-item"><i class="bi bi-person-circle"></i>Profile</a></li>
                                <li><a href="@Url.Action("Index", "Order")" class="dropdown-item"><i class="bi bi-box-seam"></i>My Orders</a></li>
                                @if (isAdmin)
                                {
                                    <li><hr class="dropdown-divider my-1" /></li>
                                    <li><a href="@Url.Action("Index", "Dashboard", new { area = "Admin" })" class="dropdown-item"><i class="bi bi-speedometer2"></i>Dashboard</a></li>
                                }
                                @if (isShipper)
                                {
                                    <li><hr class="dropdown-divider my-1" /></li>
                                    <li><a href="@Url.Action("Index", "Shipper")" class="dropdown-item"><i class="bi bi-truck"></i>My Deliveries</a></li>
                                }
                                <li><hr class="dropdown-divider my-1" /></li>
                                <li>
                                    @using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { @class = "m-0" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item text-danger"><i class="bi bi-box-arrow-right"></i>Logout</button>
                                    }
                                </li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container site-container">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill"></i>
                <div>@TempData["Success"]</div>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill"></i>
                <div>@TempData["Error"]</div>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @RenderBody()

        <hr class="my-4" />
        <footer class="footer text-center">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6 text-md-start">
                        <p class="mb-0">&copy; @DateTime.Now.Year ValiModern. All rights reserved.</p>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <small>Made with <i class="bi bi-heart-fill text-danger"></i> by ValiModern Team</small>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <!-- Login Modal -->
    <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg">
                <div class="modal-header bg-primary text-white border-0">
                    <h5 class="modal-title" id="loginModalLabel">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Welcome Back
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body p-4">
                    <form id="loginForm">
                        @Html.AntiForgeryToken()
                        
                        @* Hidden field for return URL *@
                        @if (TempData["ReturnUrl"] != null)
                        {
                            <input type="hidden" name="ReturnUrl" value="@TempData["ReturnUrl"]" />
                        }
                        
                        <div id="loginError" class="alert alert-danger d-none" role="alert"></div>
                        
                        <div class="mb-3">
                            <label for="loginEmail" class="form-label fw-semibold">
                                <i class="bi bi-envelope me-1"></i>Email Address
                            </label>
                            <input type="email" class="form-control form-control-lg" id="loginEmail" name="Email" required placeholder="your@email.com" />
                            <div class="invalid-feedback"></div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="loginPassword" class="form-label fw-semibold">
                                <i class="bi bi-lock me-1"></i>Password
                            </label>
                            <div class="input-group">
                                <input type="password" class="form-control form-control-lg" id="loginPassword" name="Password" required placeholder="Enter your password" />
                                <button class="btn btn-outline-secondary" type="button" id="toggleLoginPassword">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                            <div class="invalid-feedback"></div>
                        </div>
                        
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="rememberMe" name="RememberMe" />
                            <label class="form-check-label" for="rememberMe">
                                Remember me for 14 days
                            </label>
                        </div>
                        
                        <button type="submit" class="btn btn-primary btn-lg w-100 mb-3" id="loginBtn">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Login
                        </button>
                        
                        <div class="text-center">
                            <p class="mb-0 text-muted">
                                Don't have an account? 
                                <a href="#" class="text-primary fw-semibold" data-bs-dismiss="modal" data-bs-toggle="modal" data-bs-target="#registerModal">
                                    Sign up now
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Register Modal -->
    <div class="modal fade" id="registerModal" tabindex="-1" aria-labelledby="registerModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg">
                <div class="modal-header bg-success text-white border-0">
                    <h5 class="modal-title" id="registerModalLabel">
                        <i class="bi bi-person-plus me-2"></i>Create Account
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body p-4">
                    <form id="registerForm">
                        @Html.AntiForgeryToken()
                        <div id="registerError" class="alert alert-danger d-none" role="alert"></div>
                        
                        <div class="mb-3">
                            <label for="registerEmail" class="form-label fw-semibold">
                                <i class="bi bi-envelope me-1"></i>Email Address
                            </label>
                            <input type="email" class="form-control form-control-lg" id="registerEmail" name="Email" required placeholder="your@email.com" />
                            <div class="invalid-feedback"></div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="registerPassword" class="form-label fw-semibold">
                                <i class="bi bi-lock me-1"></i>Password
                            </label>
                            <div class="input-group">
                                <input type="password" class="form-control form-control-lg" id="registerPassword" name="Password" required placeholder="Choose a strong password" />
                                <button class="btn btn-outline-secondary" type="button" id="toggleRegisterPassword">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                            <small class="text-muted">At least 6 characters</small>
                            <div class="invalid-feedback"></div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="registerConfirmPassword" class="form-label fw-semibold">
                                <i class="bi bi-shield-check me-1"></i>Confirm Password
                            </label>
                            <input type="password" class="form-control form-control-lg" id="registerConfirmPassword" name="ConfirmPassword" required placeholder="Re-enter password" />
                            <div class="invalid-feedback"></div>
                        </div>
                        
                        <button type="submit" class="btn btn-success btn-lg w-100 mb-3" id="registerBtn">
                            <i class="bi bi-person-plus me-2"></i>Create Account
                        </button>
                        
                        <div class="text-center">
                            <p class="mb-0 text-muted">
                                Already have an account? 
                                <a href="#" class="text-success fw-semibold" data-bs-dismiss="modal" data-bs-toggle="modal" data-bs-target="#loginModal">
                                    Login here
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- JS: jQuery first, then Bootstrap bundle -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>

    <script>
    // Auto-open modal if redirected from login/register
    $(document).ready(function() {
        @if (TempData["ShowLoginModal"] != null)
        {
            <text>
            var loginModal = new bootstrap.Modal(document.getElementById('loginModal'));
            loginModal.show();
            </text>
        }
        
        @if (TempData["ShowRegisterModal"] != null)
        {
            <text>
            var registerModal = new bootstrap.Modal(document.getElementById('registerModal'));
            registerModal.show();
            </text>
        }
    });

    // Toggle password visibility
    $('#toggleLoginPassword').click(function() {
        var input = $('#loginPassword');
        var icon = $(this).find('i');
        if (input.attr('type') === 'password') {
            input.attr('type', 'text');
            icon.removeClass('bi-eye').addClass('bi-eye-slash');
        } else {
            input.attr('type', 'password');
            icon.removeClass('bi-eye-slash').addClass('bi-eye');
        }
    });

    $('#toggleRegisterPassword').click(function() {
        var input = $('#registerPassword');
        var icon = $(this).find('i');
        if (input.attr('type') === 'password') {
            input.attr('type', 'text');
            icon.removeClass('bi-eye').addClass('bi-eye-slash');
        } else {
            input.attr('type', 'password');
            icon.removeClass('bi-eye-slash').addClass('bi-eye');
        }
    });

    // Login Form Submit
    $('#loginForm').submit(function(e) {
        e.preventDefault();
        
        var btn = $('#loginBtn');
        var errorDiv = $('#loginError');
        var formData = $(this).serialize();
        
        console.log('[Login] Form submitted');
        console.log('[Login] Form data:', formData);
        
        // Disable button
        btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-2"></span>Logging in...');
        errorDiv.addClass('d-none');
        
        $.ajax({
            url: '@Url.Action("LoginAjax", "Account")',
            type: 'POST',
            data: formData,
            dataType: 'json',
            success: function(response) {
                console.log('[Login] Response:', response);
                if (response.success) {
                    console.log('[Login] Success! Redirecting to:', response.redirectUrl);
                    // Success - redirect based on role
                    window.location.href = response.redirectUrl || '@Url.Action("Index", "Home")';
                } else {
                    console.log('[Login] Failed:', response.message);
                    // Show error
                    errorDiv.html('<i class="bi bi-exclamation-triangle me-2"></i>' + (response.message || 'Login failed')).removeClass('d-none');
                    btn.prop('disabled', false).html('<i class="bi bi-box-arrow-in-right me-2"></i>Login');
                }
            },
            error: function(xhr, status, error) {
                console.error('[Login] Ajax error:', status, error);
                console.error('[Login] Response:', xhr.responseText);
                errorDiv.html('<i class="bi bi-exclamation-triangle me-2"></i>An error occurred. Please try again.').removeClass('d-none');
                btn.prop('disabled', false).html('<i class="bi bi-box-arrow-in-right me-2"></i>Login');
            }
        });
    });

    // Register Form Submit
    $('#registerForm').submit(function(e) {
        e.preventDefault();
        
        var btn = $('#registerBtn');
        var errorDiv = $('#registerError');
        var password = $('#registerPassword').val();
        var confirm = $('#registerConfirmPassword').val();
        
        // Client-side validation
        if (password !== confirm) {
            errorDiv.html('<i class="bi bi-exclamation-triangle me-2"></i>Passwords do not match').removeClass('d-none');
            return;
        }
        
        if (password.length < 6) {
            errorDiv.html('<i class="bi bi-exclamation-triangle me-2"></i>Password must be at least 6 characters').removeClass('d-none');
            return;
        }
        
        // Disable button
        btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-2"></span>Creating account...');
        errorDiv.addClass('d-none');
        
        $.ajax({
            url: '@Url.Action("RegisterAjax", "Account")',
            type: 'POST',
            data: $(this).serialize(),
            success: function(response) {
                if (response.success) {
                    // Success - redirect
                    window.location.href = response.redirectUrl || '@Url.Action("Index", "Home")';
                } else {
                    // Show error
                    errorDiv.html('<i class="bi bi-exclamation-triangle me-2"></i>' + (response.message || 'Registration failed')).removeClass('d-none');
                    btn.prop('disabled', false).html('<i class="bi bi-person-plus me-2"></i>Create Account');
                }
            },
            error: function() {
                errorDiv.html('<i class="bi bi-exclamation-triangle me-2"></i>An error occurred. Please try again.').removeClass('d-none');
                btn.prop('disabled', false).html('<i class="bi bi-person-plus me-2"></i>Create Account');
            }
        });
    });
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
