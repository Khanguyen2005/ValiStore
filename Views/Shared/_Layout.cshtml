@using System.Security.Claims
@using ValiModern.Models.ViewModels
@using ValiModern.Models.EF
@using ValiModern.Helpers
@{
    Layout = null;

    // Check authentication state
    bool isAuthenticated = (User != null && User.Identity != null && User.Identity.IsAuthenticated);
    
    // Initialize variables
    bool isAdmin = false;
    bool isShipper = false;
    string displayName = null;

    // Get cart count from session (always allowed, even for guests)
    int cartCount = 0;
    try
    {
        var cart = Session["ShoppingCart"] as List<CartItem>;
        if (cart != null)
        {
            cartCount = cart.Sum(i => i.Quantity);
        }
    }
    catch { }

    // Process user data ONLY if authenticated
    if (isAuthenticated)
    {
        // Set admin role
        isAdmin = User.IsInRole("admin");
        
        try
        {
            // Get display name from session
            if (Session != null && Session["DisplayName"] != null)
            {
                displayName = Session["DisplayName"].ToString();
            }
            
            // Get role from session
            if (Session != null && Session["UserRole"] != null)
            {
                var userRole = Session["UserRole"].ToString();
                isShipper = userRole == "shipper";
            }
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine("[DEBUG] Error getting session data: " + ex.Message);
        }

        // Fallback: If session doesn't have displayName, rebuild from database
        if (string.IsNullOrWhiteSpace(displayName) && User.Identity != null)
        {
            // User.Identity.Name now contains user ID
            int userId;
            if (int.TryParse(User.Identity.Name, out userId))
            {
                try
                {
                    using (var db = new ValiModernDBEntities())
                    {
                        var user = db.Users.Find(userId);
                        if (user != null)
                        {
                            displayName = string.IsNullOrWhiteSpace(user.username)
                                ? (string.IsNullOrWhiteSpace(user.email) ? "User #" + user.id : user.email)
                                : user.username;
                            
                            // Store back to session
                            Session["DisplayName"] = displayName;
                            Session["UserId"] = user.id;
                            
                            // Update role
                            if (user.is_admin)
                            {
                                Session["UserRole"] = "admin";
                                isAdmin = true;
                            }
                            else if (!string.IsNullOrEmpty(user.role) && user.role == "shipper")
                            {
                                Session["UserRole"] = "shipper";
                                isShipper = true;
                            }
                        }
                    }
                }
                catch { }
            }
        }
    }

    // Get categories for menu - USE CACHE to avoid DB query on every request
    List<Category> categories = new List<Category>();
    try
    {
        categories = CacheHelper.GetOrSet(
            CacheHelper.KEY_LAYOUT_CATEGORIES,
            () => {
                using (var db = new ValiModernDBEntities())
                {
                    return db.Categories.OrderBy(c => c.name).ToList();
                }
            },
            5 // Cache for 5 minutes
        );
        if (categories == null)
        {
            categories = new List<Category>();
        }
    }
    catch { }

    // New: count delivered orders awaiting customer confirmation (status Shipped & delivered_at not null)
    int deliveredAwaitingConfirm = 0;
    if (isAuthenticated)
    {
        try
        {
            // User.Identity.Name now contains user ID
            int userId;
            if (int.TryParse(User.Identity.Name, out userId))
            {
                using (var db = new ValiModernDBEntities())
                {
                    deliveredAwaitingConfirm = db.Orders.Count(o => o.user_id == userId && o.status == "Shipped" && o.delivered_at != null);
                }
            }
        }
        catch { }
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ValiModern</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

    <!-- Design System & Layout CSS -->
    <link href="~/Content/customer-design-system.css" rel="stylesheet" />
    <link href="~/Content/Layout.css" rel="stylesheet" />

    @RenderSection("Styles", required: false)
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
        <div class="container">
            @Html.ActionLink("ValiModern", "Index", "Home", new { area = "" }, new { @class = "navbar-brand me-4" })

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 gap-1 gap-lg-2 align-items-lg-center">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link px-3" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Shop", "Index", "Product", null, new { @class = "nav-link px-3" })
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle px-3" href="#" id="categoriesDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-grid me-1"></i>Categories
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="categoriesDropdown">
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Index", "Category")">
                                    <i class="bi bi-list-ul"></i>All Categories
                                </a>
                            </li>
                            @if (categories.Any())
                            {
                                <li><hr class="dropdown-divider"></li>
                                foreach (var category in categories)
                                {
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Products", "Category", new { id = category.id })">
                                            <i class="bi bi-tag"></i>@category.name
                                        </a>
                                    </li>
                                }
                            }
                        </ul>
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link px-3" })
                    </li>
                </ul>

                <ul class="navbar-nav ms-auto align-items-center gap-3">
                    <li class="nav-item d-flex align-items-center">
                        <a href="@Url.Action("Index", "Cart")" class="position-relative cart-icon-wrapper" title="Shopping Cart">
                            <i class="bi bi-cart3"></i>
                            @if (cartCount > 0)
                            {
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger cart-badge-pulse">
                                    @cartCount
                                </span>
                            }
                        </a>
                    </li>

                    @* Notification icon for delivered orders awaiting confirmation *@
                    @if (isAuthenticated && deliveredAwaitingConfirm > 0)
                    {
                        <li class="nav-item d-flex align-items-center">
                            <a href="@Url.Action("Index", "Order", new { status = "Shipped" })" class="notif-icon-wrapper text-decoration-none" title="Delivered orders awaiting your confirmation">
                                <i class="bi bi-bell-fill"></i>
                                <span class="notif-badge">@deliveredAwaitingConfirm</span>
                            </a>
                        </li>
                    }
                    @if (!isAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="btn btn-outline-light btn-sm rounded-pill px-4 fw-bold" href="@Url.Action("Login", "Account")">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-light btn-sm rounded-pill px-4 fw-bold text-primary" href="@Url.Action("Register", "Account")">Register</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link p-0 d-flex align-items-center user-menu-trigger" href="#" id="accountMenu" role="button" data-bs-toggle="dropdown">
                                <div class="user-avatar shadow-sm">
                                    @(!string.IsNullOrEmpty(displayName) ? displayName.Substring(0,1).ToUpper() : "U")
                                </div>
                                <span class="d-none d-lg-block ms-2 me-3 fw-semibold">@displayName</span>
                                <i class="bi bi-chevron-down small opacity-75 me-2"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end user-dropdown shadow-lg" aria-labelledby="accountMenu">
                                <li class="px-3 py-2 border-bottom">
                                    <div class="d-flex align-items-center">
                                        <div class="user-avatar-large me-3">
                                            @(!string.IsNullOrEmpty(displayName) ? displayName.Substring(0,1).ToUpper() : "U")
                                        </div>
                                        <div>
                                            <div class="fw-semibold">@displayName</div>
                                            <small class="text-muted">Member</small>
                                        </div>
                                    </div>
                                </li>
                                <li><a href="@Url.Action("Index", "Account")" class="dropdown-item"><i class="bi bi-person-circle"></i>Profile</a></li>
                                <li><a href="@Url.Action("Index", "Order")" class="dropdown-item"><i class="bi bi-box-seam"></i>My Orders</a></li>
                                @if (isAdmin)
                                {
                                    <li><hr class="dropdown-divider my-1" /></li>
                                    <li><a href="@Url.Action("Index", "Dashboard", new { area = "Admin" })" class="dropdown-item"><i class="bi bi-speedometer2"></i>Dashboard</a></li>
                                }
                                @if (isShipper)
                                {
                                    <li><hr class="dropdown-divider my-1" /></li>
                                    <li><a href="@Url.Action("Index", "Shipper")" class="dropdown-item"><i class="bi bi-truck"></i>My Deliveries</a></li>
                                }
                                <li><hr class="dropdown-divider my-1" /></li>
                                <li>
                                    @using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { @class = "m-0" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item text-danger"><i class="bi bi-box-arrow-right"></i>Logout</button>
                                    }
                                </li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container site-container">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill"></i>
                <div>@TempData["Success"]</div>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill"></i>
                <div>@TempData["Error"]</div>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @RenderBody()

        <hr class="my-4" />
        <footer class="footer text-center">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6 text-md-start">
                        <p class="mb-0">&copy; @DateTime.Now.Year ValiModern. All rights reserved.</p>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <small>Made with <i class="bi bi-heart-fill text-danger"></i> by ValiModern Team</small>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <!-- JS: jQuery first, then Bootstrap bundle -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
