@using System.Security.Claims
@using ValiModern.Models.ViewModels
@using ValiModern.Models.EF
@{
    Layout = null;
  bool isAdmin = User?.IsInRole("admin") ?? false;
 string displayName = null;
 bool isAuthenticated = User?.Identity?.IsAuthenticated ?? false;

    // Get cart count from session
    int cartCount = 0;
    try
    {
        var cart = Session["ShoppingCart"] as List<CartItem>;
   if (cart != null)
    {
 cartCount = cart.Sum(i => i.Quantity);
      }
    }
    catch { }

    try
    {
 if (Session != null && Session["DisplayName"] != null)
        {
         displayName = Session["DisplayName"].ToString();
        }
    }
    catch { }

    if (string.IsNullOrWhiteSpace(displayName) && isAuthenticated)
    {
        var identityName = User.Identity.Name ?? string.Empty;
        var claimsPrincipal = User as ClaimsPrincipal;
    if (claimsPrincipal != null)
     {
      var emailClaim = claimsPrincipal.FindFirst(ClaimTypes.Email);
            if (emailClaim != null && !string.IsNullOrWhiteSpace(emailClaim.Value))
  {
    identityName = emailClaim.Value;
   }
    }
        displayName = identityName;
    }

    // Get categories for menu
    List<Category> categories = new List<Category>();
    try
    {
        using (var db = new ValiModernDBEntities())
        {
            categories = db.Categories.OrderBy(c => c.name).ToList();
      }
    }
    catch { }
}

<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ValiModern</title>

    <!-- Google Font -->
 <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

    <!-- App CSS -->
    <link href="~/Content/site.css" rel="stylesheet" />
    <link href="~/Content/Layout.css" rel="stylesheet" />

    @RenderSection("Styles", required: false)
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
  <div class="container">
        @Html.ActionLink("ValiModern", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
 <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
            </button>

  <div class="collapse navbar-collapse" id="mainNavbar">
    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
   <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
     <li class="nav-item">@Html.ActionLink("Shop", "Index", "Product", null, new { @class = "nav-link" })</li>
 
   <!-- Categories Dropdown -->
           <li class="nav-item dropdown">
       <a class="nav-link dropdown-toggle" href="#" id="categoriesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
          <i class="bi bi-grid me-1"></i>Categories
    </a>
   <ul class="dropdown-menu" aria-labelledby="categoriesDropdown">
           <li><a class="dropdown-item" href="@Url.Action("Index", "Category")">
<i class="bi bi-list-ul me-2"></i>All Categories
       </a></li>
         @if (categories.Any())
     {
              <li><hr class="dropdown-divider"></li>
     foreach (var category in categories)
    {
       <li><a class="dropdown-item" href="@Url.Action("Products", "Category", new { id = category.id })">
     <i class="bi bi-tag me-2"></i>@category.name
  </a></li>
    }
  }
   </ul>
    </li>

       <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })</li>
  </ul>

       <ul class="navbar-nav ms-auto align-items-center gap-2">
      <!-- Cart with enhanced design -->
      <li class="nav-item">
        <a href="@Url.Action("Index", "Cart")" class="nav-link position-relative cart-icon-wrapper" title="Shopping Cart">
    <i class="bi bi-cart3 fs-5"></i>
      @if (cartCount > 0)
   {
    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger cart-badge-pulse">
        @cartCount
     <span class="visually-hidden">items in cart</span>
        </span>
       }
      </a>
          </li>

     @if (!isAuthenticated)
      {
 <li class="nav-item">
        <a class="btn btn-outline-light btn-sm rounded-pill px-3" href="@Url.Action("Login", "Account")">
       <i class="bi bi-box-arrow-in-right me-1"></i>Login
        </a>
        </li>
  <li class="nav-item">
     <a class="btn btn-light btn-sm rounded-pill px-3" href="@Url.Action("Register", "Account")">
    <i class="bi bi-person-plus me-1"></i>Register
          </a>
    </li>
            }
     else
     {
      <li class="nav-item dropdown">
 <a class="nav-link dropdown-toggle d-flex align-items-center user-menu-trigger" href="#" id="accountMenu" role="button"
         data-bs-toggle="dropdown" aria-expanded="false" title="Account">
          <div class="user-avatar me-2">
       @(!string.IsNullOrEmpty(displayName) ? displayName.Substring(0,1).ToUpper() : "U")
              </div>
    <span class="d-none d-lg-inline">@displayName</span>
   </a>

<ul class="dropdown-menu dropdown-menu-end user-dropdown shadow-lg" aria-labelledby="accountMenu">
       <li class="px-3 py-2 border-bottom">
      <div class="d-flex align-items-center">
   <div class="user-avatar-large me-3">
          @(!string.IsNullOrEmpty(displayName) ? displayName.Substring(0,1).ToUpper() : "U")
   </div>
     <div>
        <div class="fw-semibold">@displayName</div>
          <small class="text-muted">
              <i class="bi bi-@((isAdmin) ? "shield-check" : "person") me-1"></i>
   @((isAdmin) ? "Administrator" : "Member")
        </small>
               </div>
    </div>
            </li>

 <li>
<a href="@Url.Action("Index", "Account")" class="dropdown-item">
     <i class="bi bi-person-circle me-2"></i>Profile
         </a>
          </li>

        @if (isAdmin)
    {
         <li>
       <a href="@Url.Action("Index", "Dashboard", new { area = "Admin" })" class="dropdown-item">
         <i class="bi bi-speedometer2 me-2"></i>Dashboard
        </a>
    </li>
   }

        <li>
         <a href="@Url.Action("Index", "Order")" class="dropdown-item">
       <i class="bi bi-bag-check me-2"></i>My Orders
   </a>
     </li>

    <li><hr class="dropdown-divider my-1" /></li>

       <li>
        @using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { @class = "m-0" }))
  {
@Html.AntiForgeryToken()
    <button type="submit" class="dropdown-item text-danger">
    <i class="bi bi-box-arrow-right me-2"></i>Logout
           </button>
    }
          </li>
 </ul>
  </li>
   }
  </ul>
       </div>
        </div>
    </nav>

    <div class="container site-container">
    @if (TempData["Success"] != null)
        {
   <div class="alert alert-success alert-dismissible fade show" role="alert">
     <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
       </div>
    }
  @if (TempData["Error"] != null)
   {
       <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
     </div>
        }

        @RenderBody()

        <hr />
     <footer class="footer text-center">
          <div class="container">
   <div class="row align-items-center">
 <div class="col-md-6 text-md-start">
  <p class="mb-0">&copy; @DateTime.Now.Year ValiModern. All rights reserved.</p>
  </div>
  <div class="col-md-6 text-md-end">
    <small>Made with <i class="bi bi-heart-fill text-danger"></i> — Bright, Fresh & Modern</small>
        </div>
      </div>
       </div>
        </footer>
  </div>

    <!-- JS: jQuery first, then Bootstrap bundle -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
