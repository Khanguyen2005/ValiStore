@using ValiModern.Helpers
@using System.Security.Claims
@using ValiModern.Models.EF
@{
    Layout = null;
    bool isAdmin = false;
    string displayName = null;
    bool isAuthenticated = User?.Identity?.IsAuthenticated ?? false;

    if (isAuthenticated)
    {
        try
        {
            var identityName = User.Identity.Name ?? string.Empty;

            var claimsPrincipal = User as ClaimsPrincipal;
            if (claimsPrincipal != null)
            {
                var emailClaim = claimsPrincipal.FindFirst(ClaimTypes.Email);
                if (emailClaim != null && !string.IsNullOrWhiteSpace(emailClaim.Value))
                {
                    identityName = emailClaim.Value;
                }
            }

            using (var db = new ValiModernDBEntities())
            {
                var user = db.Users.FirstOrDefault(u => u.email == identityName || u.username == identityName);

                if (user != null)
                {
                    isAdmin = user.is_admin;
                    displayName = string.IsNullOrWhiteSpace(user.username) ? user.email : user.username;
                }
            }
        }
        catch { }
    }
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ValiModern</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <link href="~/Content/Layout.css" rel="stylesheet" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            @Html.ActionLink("ValiModern", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Shop", "Index", "Product", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Categories", "Index", "Category", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })</li>
                    @if (isAdmin)
                    {
                        <li class="nav-item">@Html.ActionLink("Dashboard", "Index", "Admin", new { area = "Admin" }, new { @class = "nav-link text-warning" })</li>
                    }
                </ul>

                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item me-2">
                        <a href="@Url.Action("Index", "Cart")" class="nav-link d-flex align-items-center">
                            <span class="bi bi-cart3 me-1"></span>
                            Cart
                            <span class="badge badge-cart ms-1">0</span>
                        </a>
                    </li>

                    @if (!isAuthenticated)
                    {
                        <li class="nav-item">@Html.ActionLink("Login", "Login", "Account", null, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Register", "Register", "Account", null, new { @class = "nav-link" })</li>
                    }
                    else
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <span class="profile-badge me-2">@(!string.IsNullOrEmpty(displayName) ? displayName.Substring(0,1).ToUpper() : "U")</span>
                                <span class="d-none d-lg-inline">@displayName</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                                <li>@Html.ActionLink("Profile", "Index", "Account", null, new { @class = "dropdown-item" })</li>
                                <li><hr class="dropdown-divider" /></li>
                                @if (isAdmin)
                                {
                                    <li>@Html.ActionLink("Admin Panel", "Index", "Admin", new { area = "Admin" }, new { @class = "dropdown-item" })</li>
                                }
                                <li>@Html.ActionLink("Orders", "Index", "Order", null, new { @class = "dropdown-item" })</li>
                                <li>
                                    <form action="@Url.Action("Logout","Account")" method="post" class="dropdown-item p-0 m-0">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-link w-100 text-start">Logout</button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container site-container">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @RenderBody()

        <hr />
        <footer class="footer text-center">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6 text-md-start">
                        <p class="mb-0">&copy; @DateTime.Now.Year ValiModern. All rights reserved.</p>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <small>Made with <i class="bi bi-heart-fill"></i> — Bright, Fresh & Modern</small>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <!-- Optimized script loading -->
    @Html.RenderScriptWithAttribute("~/bundles/jquery", "defer")
    @Html.RenderScriptWithAttribute("~/bundles/bootstrap", "defer")
    @RenderSection("scripts", required: false)
</body>
</html>
