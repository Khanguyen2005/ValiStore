@using System.Security.Claims
@{
    Layout = null;

    // Get shipper info from ViewBag (injected by ShipperLayoutDataAttribute)
    string shipperName = ViewBag.ShipperName as string ?? "Shipper";
    int shipperId = ViewBag.ShipperId ?? 0;
    int pendingDeliveries = ViewBag.PendingDeliveries ?? 0;
    string pendingDisplay = ViewBag.PendingDisplay as string ?? "0";
    
    bool isAuthenticated = (User != null && User.Identity != null && User.Identity.IsAuthenticated);
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ValiModern Shipper</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">

    <!-- App CSS -->
    <link href="~/Content/site.css" rel="stylesheet" />
    
    <!-- Shipper Layout CSS -->
    <link href="~/Content/shipper_layout.css" rel="stylesheet" />

    @RenderSection("Styles", required: false)
</head>

<body>
    <nav class="navbar navbar-expand-lg shipper-navbar">
        <div class="container">
            <a href="@Url.Action("Index","Shipper")" class="navbar-brand">
                <i class="bi bi-truck"></i>
                <span>ValiModern Delivery</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#shipperNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="shipperNavbar">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 align-items-lg-center">
                    <li class="nav-item me-2">
                        <a href="@Url.Action("Index","Shipper", new { filter = "assigned" })" class="bell-wrapper text-decoration-none" title="Pending deliveries">
                            <i class="bi bi-bell-fill"></i>
                            @if(pendingDeliveries>0){ <span class="bell-badge">@pendingDisplay</span> }
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Index","Shipper")" class="nav-link @(ViewContext.RouteData.Values["action"].ToString()=="Index"?"active":"")">
                            <i class="bi bi-grid-3x3-gap"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Index","Shipper", new { filter = "assigned" })" class="nav-link">
                            <i class="bi bi-box-seam"></i>
                            <span>Pending</span>
                            @if(pendingDeliveries>0){<span class="badge bg-danger ms-1">@pendingDisplay</span>}
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Index","Shipper", new { filter = "delivered" })" class="nav-link">
                            <i class="bi bi-check-circle"></i>
                            <span>Completed</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("History","Shipper")" class="nav-link @(ViewContext.RouteData.Values["action"].ToString()=="History"?"active":"")">
                            <i class="bi bi-clock-history"></i>
                            <span>History</span>
                        </a>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="shipperMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <div class="user-avatar me-2">@(!string.IsNullOrEmpty(shipperName)?shipperName.Substring(0,1).ToUpper():"S")</div>
                            <span class="d-none d-lg-inline">@shipperName</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="shipperMenu">
                            <li class="px-3 py-2 border-bottom">
                                <div class="d-flex align-items-center">
                                    <div class="user-avatar-large me-3">@(!string.IsNullOrEmpty(shipperName)?shipperName.Substring(0,1).ToUpper():"S")</div>
                                    <div>
                                        <div class="fw-semibold">@shipperName</div>
                                        <small class="text-muted">Shipper</small>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <a href="@Url.Action("Index","Account")" class="dropdown-item">
                                    <i class="bi bi-person-circle"></i>
                                    <span>Profile</span>
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index","Shipper")" class="dropdown-item">
                                    <i class="bi bi-bag-check"></i>
                                    <span>My Orders</span>
                                </a>
                            </li>
                            <li><hr class="dropdown-divider my-1" /></li>
                            <li>
                                @using (Html.BeginForm("Logout","Account",FormMethod.Post,new { @class="m-0" }))
                                { 
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="dropdown-item text-danger">
                                        <i class="bi bi-box-arrow-right"></i>
                                        <span>Logout</span>
                                    </button> 
                                }
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container site-container">
        @if(TempData["Success"]!=null){
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if(TempData["Error"]!=null){
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @RenderBody()
    </div>

    <footer class="footer text-center">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 text-md-start">
                    <p class="mb-0">&copy; @DateTime.Now.Year ValiModern Delivery System.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <small>Shipper Portal v1.0</small>
                </div>
            </div>
        </div>
    </footer>

    <!-- JS Libraries -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Shipper Layout JS -->
    <script src="~/Scripts/shipper_layout.js"></script>
    
    <script>
        // Shipper data for JavaScript
        window.shipperData = {
            id: @shipperId,
            name: '@shipperName',
            pendingCount: @pendingDeliveries
        };
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
