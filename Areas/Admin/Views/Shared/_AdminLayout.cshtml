                <a class="nav-link d-flex align-items-center" href="@Url.Action("Index","Dashboard")">
                    <span class="nav-icon"><i class="bi bi-house-door-fill"></i></span>Dashboard
                </a>
                <a class="nav-link d-flex align-items-center" href="@Url.Action("Index","Product")">
                    <span class="nav-icon"><i class="bi bi-box-seam"></i></span>Products
                </a>
                <a class="nav-link d-flex align-items-center" href="@Url.Action("Index","Order")">
                    <span class="nav-icon"><i class="bi bi-receipt"></i></span>Orders
                </a>
                <a class="nav-link d-flex align-items-center" href="@Url.Action("Index","ShipperManagement")">
                    <span class="nav-icon"><i class="bi bi-truck"></i></span>Shippers
                </a>
                <a class="nav-link d-flex align-items-center" href="@Url.Action("Index","User")">
                    <span class="nav-icon"><i class="bi bi-people-fill"></i></span>Users
                </a>
                <a class="nav-link d-flex align-items-center" href="@Url.Action("Index","Brand")">
                    <span class="nav-icon"><i class="bi bi-tags-fill"></i></span>Brands
                </a>
                <a class="nav-link d-flex align-items-center" href="@Url.Action("Index","Category")">
                    <span class="nav-icon"><i class="bi bi-list-ul"></i></span>Categories
                </a>
                <a class="nav-link d-flex align-items-center" href="@Url.Action("Index","Color")">
                    <span class="nav-icon"><i class="bi bi-palette-fill"></i></span>Colors
                </a>
                <a class="nav-link d-flex align-items-center" href="@Url.Action("Index","Size")">
                    <span class="nav-icon"><i class="bi bi-aspect-ratio"></i></span>Sizes
                </a>
                <a class="nav-link d-flex align-items-center" href="@Url.Action("Index","Banner")">
                    <span class="nav-icon"><i class="bi bi-image-fill"></i></span>Banners
                </a>
                
            </nav>

            <div class="sidebar-footer">
                <span>Logged in as</span>
                <strong>@displayName</strong>
            </div>
        </aside>

        <!-- MAIN -->
        <div class="flex-grow-1 d-flex flex-column" style="min-height:100vh;">
            <!-- TOPBAR -->
            <header class="admin-topbar py-2">
                <div class="container-xl d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center">
                        <button class="btn btn-outline-secondary d-lg-none me-3" id="sidebarToggle" type="button">
                            <i class="bi bi-list"></i>
                        </button>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb breadcrumb-admin mb-0">
                                <li class="breadcrumb-item"><a href="@Url.Action("Index","Admin")">Admin</a></li>
                                <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                            </ol>
                        </nav>
                    </div>
                    <div class="d-flex align-items-center">
                        <a class="btn btn-sm btn-outline-primary me-3" href="@Url.Action("Index","Home", new { area = "" })">
                            <i class="bi bi-arrow-up-right-square me-1"></i>View Store
                        </a>
                        <div class="dropdown">
                            <a class="d-flex align-items-center dropdown-toggle" href="#" id="adminMenu" data-bs-toggle="dropdown"
                               aria-expanded="false">
                                <div class="me-2 profile-badge bg-primary">
                                    @(!string.IsNullOrEmpty(displayName) ? displayName.Substring(0,1).ToUpper() : "A")
                                </div>
                                <div class="text-dark d-none d-md-block">
                                    <div style="font-weight:600;">@displayName</div>
                                    <small class="text-muted">Administrator</small>
                                </div>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="adminMenu">
                                <li>
                                    @Html.ActionLink("Profile", "Index", "Account", new { area = "" }, new { @class = "dropdown-item" })
                                </li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    @using (Html.BeginForm("Logout", "Account", new { area = "" }, FormMethod.Post, new { @class = "px-3 py-1 m-0" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-outline-danger w-100">
                                            <i class="bi bi-box-arrow-right me-1"></i>Logout
                                        </button>
                                    }
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </header>

            <!-- Main content -->
            <main class="flex-grow-1 admin-content">
                <div class="container-xl">
                    @RenderBody()
                </div>
            </main>

            <!-- Footer -->
            <footer class="admin-footer py-3">
                <div class="container-xl text-center text-muted">
                    <small>&copy; @DateTime.Now.Year ValiModern Admin Panel</small>
                </div>
            </footer>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
