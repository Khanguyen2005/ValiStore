@using System.Security.Claims
@{
    Layout = null;

    bool isAuthenticated = User?.Identity?.IsAuthenticated ?? false;
    bool isAdmin = User?.IsInRole("admin") ?? false;
    string displayName = "Admin";

    if (isAuthenticated)
    {
        try
        {
            var displayNameObj = Session["DisplayName"];
            if (displayNameObj != null)
            {
                var dn = displayNameObj as string ?? displayNameObj.ToString();
                if (!string.IsNullOrWhiteSpace(dn)) { displayName = dn; }
            }

            // Nếu Session không có (ví dụ user logged in nhưng session hết), cố gắng lấy email từ claim làm fallback
            if (displayName == "Admin")
            {
                var cp = User as ClaimsPrincipal;
                if (cp != null)
                {
                    var emailClaim = cp.FindFirst(ClaimTypes.Email);
                    if (emailClaim != null && !string.IsNullOrWhiteSpace(emailClaim.Value))
                    {
                        displayName = emailClaim.Value;
                    }
                    else if (!string.IsNullOrWhiteSpace(User.Identity?.Name))
                    {
                        displayName = User.Identity.Name;
                    }
                }
            }
        }
        catch
        {
            // không throw trong layout — giữ mặc định an toàn
        }
    }
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - Admin - ValiModern</title>

    <!-- Bootstrap CSS (CDN) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
          integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65"
          crossorigin="anonymous">

    <!-- Site styles -->
    <link href="~/Content/site.css" rel="stylesheet" />
    <link href="~/Content/Layout.css" rel="stylesheet" />

    <!-- Admin layout css (extracted) -->
    <link href="~/Content/admin_layout.css" rel="stylesheet" />

    <!-- Optional admin specific css -->
    <link href="~/Content/Admin.css" rel="stylesheet" />
    <!-- Bootstrap icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    
    @RenderSection("Styles", required: false)
</head>

<body class="admin-layout">

    <div class="d-flex">
        <!-- SIDEBAR -->
        <aside class="admin-sidebar" id="adminSidebar">
            <a href="@Url.Action("Index","Dashboard")" class="admin-brand">
                <i class="bi bi-speedometer2 me-2"></i><span>ValiModern Admin</span>
            </a>

            <nav class="nav flex-column px-2 mt-2">
                <a class="nav-link d-flex align-items-center" href="@Url.Action("Index","Dashboard")">
                    <span class="nav-icon"><i class="bi bi-house-door-fill"></i></span>Dashboard
                </a>
                <a class="nav-link d-flex align-items-center" href="@Url.Action("Index","Product")">
                    <span class="nav-icon"><i class="bi bi-box-seam"></i></span>Products
                </a>
                <a class="nav-link d-flex align-items-center" href="@Url.Action("Index","Order")">
                    <span class="nav-icon"><i class="bi bi-receipt"></i></span>Orders
                </a>
                <a class="nav-link d-flex align-items-center" href="@Url.Action("Index","Brand")">
                    <span class="nav-icon"><i class="bi bi-tags-fill"></i></span>Brands
                </a>
                <a class="nav-link d-flex align-items-center" href="@Url.Action("Index","Category")">
                    <span class="nav-icon"><i class="bi bi-list-ul"></i></span>Categories
                </a>
                <a class="nav-link d-flex align-items-center" href="@Url.Action("Index","Color")">
                    <span class="nav-icon"><i class="bi bi-palette-fill"></i></span>Colors
                </a>
                <a class="nav-link d-flex align-items-center" href="@Url.Action("Index","Size")">
                    <span class="nav-icon"><i class="bi bi-aspect-ratio"></i></span>Sizes
                </a>
                <a class="nav-link d-flex align-items-center" href="@Url.Action("Index","User")">
                    <span class="nav-icon"><i class="bi bi-people-fill"></i></span>Users
                </a>
                <a class="nav-link d-flex align-items-center" href="@Url.Action("Index","Banner")">
                    <span class="nav-icon"><i class="bi bi-image-fill"></i></span>Banners
                </a>
                <a class="nav-link d-flex align-items-center" href="@Url.Action("Index","Payment")">
                    <span class="nav-icon"><i class="bi bi-credit-card-2-front-fill"></i></span>Payments
                </a>
                <a class="nav-link d-flex align-items-center" href="@Url.Action("Reports","Admin")">
                    <span class="nav-icon"><i class="bi bi-graph-up"></i></span>Reports
                </a>
            </nav>

            <div class="sidebar-footer">
                <span>Logged in as</span>
                <strong>@displayName</strong>
            </div>
        </aside>

        <!-- MAIN -->
        <div class="flex-grow-1 d-flex flex-column" style="min-height:100vh;">
            <!-- TOPBAR -->
            <header class="admin-topbar py-2">
                <div class="container-xl d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center">
                        <button class="btn btn-outline-secondary d-lg-none me-3" id="sidebarToggle" type="button">
                            <i class="bi bi-list"></i>
                        </button>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb breadcrumb-admin mb-0">
                                <li class="breadcrumb-item"><a href="@Url.Action("Index","Admin")">Admin</a></li>
                                <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                            </ol>
                        </nav>
                    </div>
                    <div class="d-flex align-items-center">
                        <a class="btn btn-sm btn-outline-primary me-3" href="@Url.Action("Index","Home", new { area = "" })">
                            <i class="bi bi-arrow-up-right-square me-1"></i>View Store
                        </a>
                        <div class="dropdown">
                            <a class="d-flex align-items-center dropdown-toggle" href="#" id="adminMenu" data-bs-toggle="dropdown"
                               aria-expanded="false">
                                <div class="me-2 profile-badge bg-primary">
                                    @(!string.IsNullOrEmpty(displayName) ? displayName.Substring(0,1).ToUpper() : "A")
                                </div>
                                <div class="text-dark d-none d-md-block">
                                    <div style="font-weight:600;">@displayName</div>
                                    <small class="text-muted">Administrator</small>
                                </div>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="adminMenu">
                                <li>@Html.ActionLink("Profile", "Index", "Account", null, new { @class = "dropdown-item" })</li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <form action="@Url.Action("Logout","Account")" method="post" class="px-3 py-1 m-0">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-outline-danger w-100">Logout</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </header>

            <!-- CONTENT -->
            <main class="admin-content">
                <div class="container-xl">
                    @RenderBody()
                </div>
            </main>

            <footer class="admin-footer mt-auto">
                <div class="container-xl">
                    <div class="text-muted small py-3">© @DateTime.Now.Year ValiModern — Admin Panel</div>
                </div>
            </footer>
        </div>
    </div>

    <!-- SCRIPTS: CDN, no ScriptHelper -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"
            integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4"
            crossorigin="anonymous"></script>

    <script>
        (function () {
            var toggle = document.getElementById('sidebarToggle');
            var sidebar = document.getElementById('adminSidebar');
            if (!toggle || !sidebar) return;
            toggle.addEventListener('click', function () {
                sidebar.classList.toggle('show');
                document.body.classList.toggle('offcanvas-open');
            });
        })();
    </script>

    @RenderSection("scripts", required: false)
</body>

</html>
