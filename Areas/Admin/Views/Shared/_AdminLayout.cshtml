@using System.Security.Claims
@using ValiModern.Models.EF
@{
    Layout = null;

    bool isAuthenticated = (User != null && User.Identity != null && User.Identity.IsAuthenticated);
    bool isAdmin = (User != null && User.IsInRole("admin"));
    string displayName = "Admin";

    if (isAuthenticated)
    {
        try
        {
            var displayNameObj = Session["DisplayName"];
            if (displayNameObj != null)
            {
                var dn = displayNameObj as string ?? displayNameObj.ToString();
                if (!string.IsNullOrWhiteSpace(dn)) { displayName = dn; }
            }

            // Fallback: if Session doesn't have displayName, get from database using ID
            if (displayName == "Admin" && User.Identity != null)
            {
                int userId;
                if (int.TryParse(User.Identity.Name, out userId))
                {
                    using (var db = new ValiModernDBEntities())
                    {
                        var user = db.Users.Find(userId);
                        if (user != null)
                        {
                            displayName = string.IsNullOrWhiteSpace(user.username)
                                ? (string.IsNullOrWhiteSpace(user.email) ? "User #" + user.id : user.email)
                                : user.username;
                            Session["DisplayName"] = displayName;
                        }
                    }
                }
            }
        }
        catch
        {
            // không throw trong layout — giữ mặc định an toàn
        }
    }
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - Admin - ValiModern</title>

    <!-- Bootstrap CSS (CDN) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
          integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65"
          crossorigin="anonymous">

    <!-- Site styles -->
    <link href="~/Content/site.css" rel="stylesheet" />
    <link href="~/Content/Layout.css" rel="stylesheet" />

    <!-- Admin layout css (extracted) -->
    <link href="~/Content/admin_layout.css" rel="stylesheet" />

    <!-- Optional admin specific css -->
    <link href="~/Content/Admin.css" rel="stylesheet" />
    <!-- Bootstrap icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    
    @RenderSection("Styles", required: false)
</head>

<body class="admin-layout">

    <div class="d-flex">
        <!-- SIDEBAR -->
        <aside class="admin-sidebar" id="adminSidebar">
            <a href="@Url.Action("Index","Dashboard")" class="admin-brand">
