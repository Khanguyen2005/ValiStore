@model ValiModern.Models.ViewModels.ProductFormVM
@using System.Globalization
@{
    ViewBag.Title = "Edit Product";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-xl py-3">
    <h2 class="h5 fw-bold mb-3">Edit product</h2>
    @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
     @Html.AntiForgeryToken()
   @Html.HiddenFor(m => m.Id)
     <div class="row g-3">
    <div class="col-md-6">
         @Html.LabelFor(m => m.Name)
      @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
      </div>
       <div class="col-md-6">
     @Html.LabelFor(m => m.BrandId)
           @Html.DropDownListFor(m => m.BrandId, Model.Brands, "-- Brand --", new { @class = "form-select" })
     </div>
     <div class="col-md-6">
                @Html.LabelFor(m => m.CategoryId)
           @Html.DropDownListFor(m => m.CategoryId, Model.Categories, "-- Category --", new { @class = "form-select" })
      </div>
      <div class="col-md-3">
       @Html.LabelFor(m => m.Price)
        <input type="text" class="form-control" id="Price_display" inputmode="numeric"
            value="@Model.Price.ToString("N0", new CultureInfo("vi-VN"))" placeholder="0" />
     <input type="hidden" name="Price" id="Price" value="@Model.Price" />
                @Html.ValidationMessageFor(m => m.Price)
            </div>
            <div class="col-md-3">
           @Html.LabelFor(m => m.OriginalPrice)
 <input type="text" class="form-control" id="OriginalPrice_display" inputmode="numeric"
        value="@Model.OriginalPrice.ToString("N0", new CultureInfo("vi-VN"))" placeholder="0" />
   <input type="hidden" name="OriginalPrice" id="OriginalPrice" value="@Model.OriginalPrice" />
    @Html.ValidationMessageFor(m => m.OriginalPrice)
  </div>
        <div class="col-md-3">
                @Html.LabelFor(m => m.Stock)
   @Html.TextBoxFor(m => m.Stock, new { @class = "form-control", type = "number" })
                <small class="text-muted">Current stock quantity</small>
</div>
         <div class="col-md-3">
                <label class="form-label">Sold</label>
                <input type="text" class="form-control" value="@Model.Sold" readonly disabled />
                <small class="text-muted">Auto-calculated from completed orders</small>
          </div>
            <div class="col-md-6">
           <label class="form-label">Colors</label>
    <select name="SelectedColorIds" multiple class="form-select"
  size="@Math.Max(4, Model.AllColors.Count)">
   @foreach (var c in Model.AllColors)
                {
       var selected = Model.SelectedColorIds != null && Model.SelectedColorIds.Contains(c.Id) ? "selected"
             : null;
      <option value="@c.Id" @selected>@c.Name (@c.ColorCode)</option>
    }
       </select>
         <small class="text-muted">Hold Ctrl or Cmd to select multiple colors.</small>
          </div>
            <div class="col-md-6">
          <label class="form-label">Sizes</label>
           <select name="SelectedSizeIds" multiple class="form-select" size="@Math.Max(4, Model.AllSizes.Count)">
 @foreach (var s in Model.AllSizes)
          {
         var selectedS = Model.SelectedSizeIds != null && Model.SelectedSizeIds.Contains(s.Id) ? "selected"
            : null;
   <option value="@s.Id" @selectedS>@s.Name</option>
                 }
  </select>
        <small class="text-muted">Hold Ctrl or Cmd to select multiple sizes.</small>
     </div>
     <div class="col-md-12">
         @Html.LabelFor(m => m.Description)
     @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 4 })
            </div>
          <div class="col-md-6">
  <label class="form-label">Main image</label>
          <div class="img-dropzone border rounded-3 p-4 text-center bg-light position-relative"
    style="cursor:pointer;">
      <input type="file" name="imageFile" accept="image/*"
       class="position-absolute top-0 start-0 w-100 h-100 opacity-0" />
            <div class="dz-text @(string.IsNullOrEmpty(Model.ImageUrl)?"":"d-none")">
   <i class="bi bi-cloud-upload fs-1 text-primary"></i>
  <p class="mb-1">Drag & drop image here or click to choose</p>
            <small class="text-muted">Allowed: jpg, jpeg, png, gif, webp</small>
 </div>
     <img data-preview
  src="@(string.IsNullOrEmpty(Model.ImageUrl)?"": Url.Content("~"+Model.ImageUrl))"
    alt="preview" class="img-fluid rounded @(string.IsNullOrEmpty(Model.ImageUrl)?"d-none":"")" />
                </div>
       <span class="text-danger">@Html.ValidationMessage("ImageUrl")</span>
         </div>
            <div class="col-md-3 d-flex align-items-end">
             <div class="form-check">
      @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-check-input", id = "is_active" })
  <label class="form-check-label" for="is_active">Active</label>
     </div>
       </div>
        </div>
        <div class="mt-3">
            <a class="btn btn-outline-secondary" href="@Url.Action("Index")">Cancel</a>
            <button class="btn btn-primary" type="submit">Save</button>
        </div>
    }
</div>
@section scripts {
    <script src="~/Scripts/Admin/image-dropzone.js"></script>
  <script>
    (function () {
        function bindMoneyInput(displayId, hiddenId) {
   const display = document.getElementById(displayId);
         const hidden = document.getElementById(hiddenId);
            if (!display || !hidden) return;

      const formatter = new Intl.NumberFormat('vi-VN');
       const stripNonDigits = s => (s || '').replace(/[^\d]/g, '');

         // Sync on focus - show raw number
    display.addEventListener('focus', function () {
           display.value = hidden.value || '';
    display.select();
       });

            // Update hidden field as user types
      display.addEventListener('input', function () {
                hidden.value = stripNonDigits(display.value);
            });

        // Format on blur
            display.addEventListener('blur', function () {
     const val = parseInt(hidden.value, 10);
                display.value = val > 0 ? formatter.format(val) : '';
  });
        }

        bindMoneyInput('Price_display', 'Price');
        bindMoneyInput('OriginalPrice_display', 'OriginalPrice');
    })();
    </script>
}