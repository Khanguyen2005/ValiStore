@model List<ValiModern.Areas.Admin.Controllers.ShipperStatsVM>
@{
    ViewBag.Title = "Shippers Management";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="mb-1">
                    <i class="bi bi-truck me-2"></i>Shippers Management
                </h2>
                <p class="text-muted mb-0">Overview of all delivery personnel and their performance</p>
            </div>
            <a href="@Url.Action("Create", "User", new { role = "shipper" })" class="btn btn-primary">
                <i class="bi bi-plus-circle me-1"></i>Add New Shipper
            </a>
        </div>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-primary">
                <div class="card-body text-center">
                    <i class="bi bi-people-fill fs-1 text-primary mb-2"></i>
                    <h3 class="mb-0">@Model.Count</h3>
                    <small class="text-muted">Total Shippers</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-success">
                <div class="card-body text-center">
                    <i class="bi bi-check-circle fs-1 text-success mb-2"></i>
                    <h3 class="mb-0">@Model.Sum(s => s.CompletedOrders)</h3>
                    <small class="text-muted">Total Completed</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-warning">
                <div class="card-body text-center">
                    <i class="bi bi-clock-history fs-1 text-warning mb-2"></i>
                    <h3 class="mb-0">@Model.Sum(s => s.PendingDeliveries)</h3>
                    <small class="text-muted">Pending Deliveries</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-info">
                <div class="card-body text-center">
                    <i class="bi bi-truck-front-fill fs-1 text-info mb-2"></i>
                    <h3 class="mb-0">@Model.Sum(s => s.TotalAssigned)</h3>
                    <small class="text-muted">Total Assigned</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Shippers Table -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="bi bi-list-ul me-2"></i>All Shippers
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0 align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Shipper</th>
                                    <th>Contact</th>
                                    <th class="text-center">Total<br/>Assigned</th>
                                    <th class="text-center">Pending</th>
                                    <th class="text-center">Delivered<br/>(Awaiting)</th>
                                    <th class="text-center">Completed</th>
                                    <th class="text-center">Success Rate</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var shipper in Model)
                                {
                                    var performanceClass = shipper.CompletionRate >= 80 ? "success" :
                                                         shipper.CompletionRate >= 50 ? "warning" : "danger";
                                    
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="me-3">
                                                    <div class="rounded-circle bg-info text-white d-flex align-items-center justify-content-center" 
                                                         style="width: 40px; height: 40px; font-weight: bold;">
                                                        @(shipper.ShipperName.Substring(0, 1).ToUpper())
                                                    </div>
                                                </div>
                                                <div>
                                                    <strong>@shipper.ShipperName</strong>
                                                    <br />
                                                    <small class="text-muted">ID: #@shipper.ShipperId</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div>
                                                <i class="bi bi-envelope me-1 text-muted"></i>@shipper.ShipperEmail
                                                <br />
                                                <i class="bi bi-telephone me-1 text-muted"></i>@shipper.ShipperPhone
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-primary fs-6">@shipper.TotalAssigned</span>
                                        </td>
                                        <td class="text-center">
                                            @if (shipper.PendingDeliveries > 0)
                                            {
                                                <span class="badge bg-warning fs-6">@shipper.PendingDeliveries</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            @if (shipper.DeliveredAwaitingConfirm > 0)
                                            {
                                                <span class="badge bg-info fs-6">@shipper.DeliveredAwaitingConfirm</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            @if (shipper.CompletedOrders > 0)
                                            {
                                                <span class="badge bg-success fs-6">@shipper.CompletedOrders</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            @if (shipper.TotalAssigned > 0)
                                            {
                                                var percentage = shipper.CompletionRate;
                                                <div class="progress" style="height: 25px;">
                                                    <div class="progress-bar bg-@performanceClass" 
                                                         role="progressbar" 
                                                         style="width: @percentage.ToString("F1", System.Globalization.CultureInfo.InvariantCulture)%"
                                                         aria-valuenow="@percentage" 
                                                         aria-valuemin="0" 
                                                         aria-valuemax="100">
                                                        <strong>@percentage.ToString("F1")%</strong>
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted">N/A</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a href="@Url.Action("ShipperDeliveries", "Order", new { id = shipper.ShipperId })" 
                                                   class="btn btn-sm btn-outline-primary" 
                                                   title="View Deliveries">
                                                    <i class="bi bi-truck me-1"></i>Deliveries
                                                </a>
                                                <a href="@Url.Action("Edit", "User", new { id = shipper.ShipperId })" 
                                                   class="btn btn-sm btn-outline-secondary"
                                                   title="Edit Shipper">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-12">
            <div class="alert alert-info text-center py-5">
                <i class="bi bi-info-circle fs-1 d-block mb-3"></i>
                <h4>No Shippers Yet</h4>
                <p class="mb-3">You haven't added any delivery personnel yet.</p>
                <a href="@Url.Action("Create", "User", new { role = "shipper" })" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-1"></i>Add Your First Shipper
                </a>
            </div>
        </div>
    </div>
}

@section scripts {
    <script>
        // Optional: Add tooltips or interactive features
        $(document).ready(function() {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}
