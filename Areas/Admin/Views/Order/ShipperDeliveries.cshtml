@model ValiModern.Models.ViewModels.ShipperDeliveriesVM
@{
    ViewBag.Title = "Shipper Deliveries - " + Model.ShipperName;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="mb-1">
                    <i class="bi bi-truck me-2"></i>Shipper Deliveries
                </h2>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index")">Orders</a></li>
                        <li class="breadcrumb-item active">Shipper: @Model.ShipperName</li>
                    </ol>
                </nav>
            </div>
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i>Back to Orders
            </a>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title mb-3">
                    <i class="bi bi-person-badge me-2"></i>Shipper Information
                </h5>
                <div class="row">
                    <div class="col-md-3">
                        <strong>Name:</strong>
                        <p class="mb-2">@Model.ShipperName</p>
                    </div>
                    <div class="col-md-3">
                        <strong>Email:</strong>
                        <p class="mb-2">@Model.ShipperEmail</p>
                    </div>
                    <div class="col-md-3">
                        <strong>Phone:</strong>
                        <p class="mb-2">@Model.ShipperPhone</p>
                    </div>
                    <div class="col-md-3">
                        <strong>Shipper ID:</strong>
                        <p class="mb-2">#@Model.ShipperId</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card border-primary">
            <div class="card-body text-center">
                <i class="bi bi-box-seam fs-1 text-primary mb-2"></i>
                <h3 class="mb-0">@Model.TotalCount</h3>
                <small class="text-muted">Total Assigned</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-warning">
            <div class="card-body text-center">
                <i class="bi bi-clock-history fs-1 text-warning mb-2"></i>
                <h3 class="mb-0">@Model.PendingCount</h3>
                <small class="text-muted">Pending Delivery</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-info">
            <div class="card-body text-center">
                <i class="bi bi-truck fs-1 text-info mb-2"></i>
                <h3 class="mb-0">@Model.DeliveredCount</h3>
                <small class="text-muted">Delivered (Awaiting Confirm)</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-success">
            <div class="card-body text-center">
                <i class="bi bi-check-circle fs-1 text-success mb-2"></i>
                <h3 class="mb-0">@Model.CompletedCount</h3>
                <small class="text-muted">Completed</small>
            </div>
        </div>
    </div>
</div>

@if (Model.Orders.Any())
{
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="bi bi-list-ul me-2"></i>Delivery List
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Order ID</th>
                                    <th>Customer</th>
                                    <th>Order Date</th>
                                    <th>Assigned Date</th>
                                    <th>Delivered Date</th>
                                    <th>Amount</th>
                                    <th>Status</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.Orders)
                                {
                                    var statusClass = order.Status == "Completed" ? "success" :
                                                     order.Status == "Shipped" && order.DeliveredAt.HasValue ? "info" :
                                                     order.Status == "Shipped" ? "warning" : "secondary";
                                    
                                    var deliveryDuration = order.DeliveredAt.HasValue && order.AssignedAt.HasValue
                                        ? (order.DeliveredAt.Value - order.AssignedAt.Value).TotalHours
                                        : 0;
                                    
                                    <tr>
                                        <td>
                                            <strong class="text-primary">#@order.Id.ToString("D6")</strong>
                                        </td>
                                        <td>
                                            <div>
                                                <strong>@order.UserName</strong>
                                                <br />
                                                <small class="text-muted">@order.Phone</small>
                                            </div>
                                        </td>
                                        <td>
                                            <small>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</small>
                                        </td>
                                        <td>
                                            @if (order.AssignedAt.HasValue)
                                            {
                                                <small>@order.AssignedAt.Value.ToString("dd/MM/yyyy HH:mm")</small>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (order.DeliveredAt.HasValue)
                                            {
                                                <div>
                                                    <i class="bi bi-check-circle text-success me-1"></i>
                                                    <small>@order.DeliveredAt.Value.ToString("dd/MM/yyyy HH:mm")</small>
                                                    @if (deliveryDuration > 0 && deliveryDuration < 24)
                                                    {
                                                        <br />
                                                        <span class="badge bg-success mt-1">
                                                            <i class="bi bi-lightning-fill"></i> @deliveryDuration.ToString("F1")h
                                                        </span>
                                                    }
                                                    else if (deliveryDuration > 0)
                                                    {
                                                        <br />
                                                        <span class="badge bg-secondary mt-1">
                                                            @((int)(deliveryDuration / 24))d @((int)(deliveryDuration % 24))h
                                                        </span>
                                                    }
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            <strong class="text-success">@order.TotalAmount.ToString("N0") đ</strong>
                                        </td>
                                        <td>
                                            <span class="badge bg-@statusClass">
                                                @order.Status
                                                @if (order.Status == "Shipped" && order.DeliveredAt.HasValue)
                                                {
                                                    <text>(Delivered)</text>
                                                }
                                            </span>
                                        </td>
                                        <td class="text-end">
                                            <a href="@Url.Action("Details", new { id = order.Id })" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye me-1"></i>View
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @* Pagination *@
    if (Model.TotalPages > 1)
    {
        <div class="row mt-4">
            <div class="col-12">
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                            <a class="page-link" href="@Url.Action("ShipperDeliveries", new { id = Model.ShipperId, page = Model.CurrentPage - 1 })">
                                <i class="bi bi-chevron-left"></i>
                            </a>
                        </li>

                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" href="@Url.Action("ShipperDeliveries", new { id = Model.ShipperId, page = i })">@i</a>
                            </li>
                        }

                        <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                            <a class="page-link" href="@Url.Action("ShipperDeliveries", new { id = Model.ShipperId, page = Model.CurrentPage + 1 })">
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
                <p class="text-center text-muted">
                    Showing page @Model.CurrentPage of @Model.TotalPages (@Model.TotalCount total orders)
                </p>
            </div>
        </div>
    }
}
else
{
    <div class="row">
        <div class="col-12">
            <div class="alert alert-info text-center py-5">
                <i class="bi bi-info-circle fs-1 d-block mb-3"></i>
                <h4>No Orders Assigned</h4>
                <p class="mb-0">This shipper hasn't been assigned any orders yet.</p>
            </div>
        </div>
    </div>
}
