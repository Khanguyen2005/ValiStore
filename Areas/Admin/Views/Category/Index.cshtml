@model IEnumerable<ValiModern.Models.EF.Category>
@{
    ViewBag.Title = "Categories";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var currentSort = ViewBag.Sort as string ?? "id_asc";
}
<div class="container-xl py-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h5 fw-bold mb-0">Categories</h2>
        <div class="d-flex align-items-center gap-2">
            <div class="dropdown">
                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="sortCatBtn" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-sort-alpha-down me-1"></i> Sort
                </button>
                <ul class="dropdown-menu" aria-labelledby="sortCatBtn">
                    <li><a class="dropdown-item @(currentSort=="id_asc"?"active":null)" href="@Url.Action("Index", new { sort = "id_asc" })">ID Asc</a></li>
                    <li><a class="dropdown-item @(currentSort=="id_desc"?"active":null)" href="@Url.Action("Index", new { sort = "id_desc" })">ID Desc</a></li>
                </ul>
            </div>
            <a href="@Url.Action("Create")" class="btn btn-sm btn-primary"><i class="bi bi-plus-lg"></i> New</a>
        </div>
    </div>
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    <div class="table-responsive">
        <table class="table table-sm align-middle">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Products</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <td>@c.id</td>
                        <td>@c.name</td>
                        <td>@(c.Products != null ? c.Products.Count : 0)</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-primary" href="@Url.Action("Edit", new { id = c.id })"><i class="bi bi-pencil"></i></a>
                            @using (Html.BeginForm("Delete", "Category", FormMethod.Post, new { onsubmit = "return confirm('Delete this category?')" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.Hidden("id", c.id)
                                <button type="submit" class="btn btn-sm btn-outline-danger ms-1"><i class="bi bi-trash"></i></button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>