@model IEnumerable<ValiModern.Models.EF.Banner>
@{
    ViewBag.Title = "Banners";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var currentSort = ViewBag.Sort as string ?? "id_asc";
}
<div class="container-xl py-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h5 fw-bold mb-0">Banners</h2>
        <div class="d-flex align-items-center gap-2">
            <div class="dropdown">
                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="sortBannerBtn" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-sort-down me-1"></i> Sort
                </button>
                <ul class="dropdown-menu" aria-labelledby="sortBannerBtn">
                    <li><a class="dropdown-item @(currentSort=="id_asc"?"active":null)" href="@Url.Action("Index", new { sort = "id_asc" })">ID Asc</a></li>
                    <li><a class="dropdown-item @(currentSort=="id_desc"?"active":null)" href="@Url.Action("Index", new { sort = "id_desc" })">ID Desc</a></li>
                </ul>
            </div>
            <a href="@Url.Action("Create")" class="btn btn-sm btn-primary"><i class="bi bi-plus-lg"></i> New</a>
        </div>
    </div>
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    <div class="table-responsive">
        <table class="table table-sm align-middle">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Image</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var b in Model)
                {
                    <tr>
                        <td>@b.id</td>
                        <td>@b.name</td>
                        <td>
                            <img src="@b.image_url" alt="@b.name" style="height:48px;object-fit:cover;border-radius:6px;" />
                        </td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-primary" href="@Url.Action("Edit", new { id = b.id })"><i class="bi bi-pencil"></i></a>
                            @using (Html.BeginForm("Delete", "Banner", FormMethod.Post, new { onsubmit = "return confirm('Delete this banner?')" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.Hidden("id", b.id)
                                <button type="submit" class="btn btn-sm btn-outline-danger ms-1"><i class="bi bi-trash"></i></button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>