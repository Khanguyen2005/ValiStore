@model ValiModern.Models.EF.Brand
@{
    ViewBag.Title = "Edit Brand";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-xl py-3">
    <h2 class="h5 fw-bold mb-3">Edit brand</h2>
    @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.id)
        <div class="mb-3">
            @Html.LabelFor(m => m.name)
            @Html.TextBoxFor(m => m.name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.name)
        </div>
        <div class="mb-3">
            <label class="form-label">Logo image</label>
            <div class="img-dropzone border rounded-3 p-4 text-center bg-light position-relative" style="cursor:pointer;">
                <input type="file" name="imageFile" accept="image/*" class="position-absolute top-0 start-0 w-100 h-100 opacity-0" />
                <div class="dz-text @(string.IsNullOrEmpty(Model.image_url)?"":"d-none")">
                    <i class="bi bi-cloud-upload fs-1 text-primary"></i>
                    <p class="mb-1">Drag & drop image here or click to choose</p>
                    <small class="text-muted">Allowed: jpg, jpeg, png, gif, webp</small>
                </div>
                <img data-preview src="@(string.IsNullOrEmpty(Model.image_url)?"": Url.Content("~"+Model.image_url))" alt="preview" class="img-fluid rounded @(string.IsNullOrEmpty(Model.image_url)?"d-none":"")" />
            </div>
            <span class="text-danger">@Html.ValidationMessage("imageFile")</span>
        </div>
        <div>
            <a class="btn btn-outline-secondary" href="@Url.Action("Index")">Cancel</a>
            <button class="btn btn-primary" type="submit">Save</button>
        </div>
    }
</div>
@section scripts {
    <script src="~/Scripts/Admin/image-dropzone.js"></script> }