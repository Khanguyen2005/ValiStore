@model IEnumerable<ValiModern.Models.EF.Brand>
@{
    ViewBag.Title = "Brands";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var currentSort = ViewBag.Sort as string ?? "id_asc";
}
<div class="container-xl py-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h5 fw-bold mb-0">Brands</h2>
        <div class="d-flex align-items-center gap-2">
            <div class="dropdown">
                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="sortBrandBtn" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-sort-down me-1"></i> Sort
                </button>
                <ul class="dropdown-menu" aria-labelledby="sortBrandBtn">
                    <li><a class="dropdown-item @(currentSort=="id_asc"?"active":null)" href="@Url.Action("Index", new { sort = "id_asc", q=ViewBag.Query })">ID Asc</a></li>
                    <li><a class="dropdown-item @(currentSort=="id_desc"?"active":null)" href="@Url.Action("Index", new { sort = "id_desc", q=ViewBag.Query })">ID Desc</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li><a class="dropdown-item @(currentSort=="name_asc"?"active":null)" href="@Url.Action("Index", new { sort = "name_asc", q=ViewBag.Query })">Name Asc</a></li>
                    <li><a class="dropdown-item @(currentSort=="name_desc"?"active":null)" href="@Url.Action("Index", new { sort = "name_desc", q=ViewBag.Query })">Name Desc</a></li>
                </ul>
            </div>
            <a href="@Url.Action("Create")" class="btn btn-sm btn-primary"><i class="bi bi-plus-lg"></i> New</a>
        </div>
    </div>
    @using (Html.BeginForm("Index", "Brand", FormMethod.Get, new { @class = "row g-2 mb-3" }))
    {
        <div class="col-md-4">
            <input type="text" name="q" value="@ViewBag.Query" class="form-control" placeholder="Search name" />
        </div>
        <div class="col-md-2">
            <button class="btn btn-outline-secondary w-100" type="submit">Search</button>
        </div>
    }
    @if (TempData["Success"] != null)
    {<div class="alert alert-success">@TempData["Success"]</div>}
    @if (TempData["Error"] != null)
    {<div class="alert alert-danger">@TempData["Error"]</div>}
    <div class="table-responsive">
        <table class="table table-sm align-middle">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Logo</th>
                    <th>Name</th>
                    <th>Products</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var b in Model)
                {
                    <tr>
                        <td>@b.id</td>
                        <td>@(string.IsNullOrEmpty(b.image_url)?Html.Raw("<span class='text-muted small'>No image</span>") : Html.Raw($"<img src='{b.image_url}' style='height:40px;width:auto;border-radius:6px;' />"))</td>
                        <td>@b.name</td>
                        <td>@(b.Products?.Count ??0)</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-primary" href="@Url.Action("Edit", new { id = b.id })"><i class="bi bi-pencil"></i></a>
                            @using (Html.BeginForm("Delete", "Brand", FormMethod.Post, new { onsubmit = "return confirm('Delete this brand?')" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.Hidden("id", b.id)
                                <button type="submit" class="btn btn-sm btn-outline-danger ms-1"><i class="bi bi-trash"></i></button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>